  .contacto-card {
    background: var(--color-white);
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 40px var(--color-overlay-light);
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
