---
import Layout from "../layouts/Layout.astro";
import EditProductModal from "../components/admin/EditProductModal.astro";
import AddProductModal from "../components/admin/AddProductModal.astro";
import DeleteConfirmModal from "../components/admin/DeleteConfirmModal.astro";
---

<Layout>
  <!-- Pantalla de Login -->
  <div class="admin-login" id="adminLogin">
    <div class="login-container">
      <div class="login-header">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
        </svg>
        <h2>Acceso de Administrador</h2>
        <p>Ingresa el código de acceso para continuar</p>
      </div>
      <form id="loginForm" class="login-form">
        <div class="form-group">
          <label for="accessCode">Código de Acceso</label>
          <input
            type="password"
            id="accessCode"
            name="accessCode"
            placeholder="Ingresa el código"
            required
            autocomplete="off"
            autofocus
          />
        </div>
        <button type="submit" class="btn-login">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
            <polyline points="10 17 15 12 10 7"></polyline>
            <line x1="15" y1="12" x2="3" y2="12"></line>
          </svg>
          Ingresar
        </button>
        <div class="login-error" id="loginError" style="display: none;">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span>Código incorrecto. Intenta nuevamente.</span>
        </div>
      </form>
    </div>
  </div>

  <!-- Contenido de Admin (oculto hasta autenticación) -->
  <div class="admin-container" id="adminContent" style="display: none;">
    <!-- Header -->
    <div class="admin-header">
      <div>
        <h1>Administración de Productos</h1>
        <p>Gestiona tu catálogo de productos hidráulicos</p>
      </div>
      <button class="btn-primary" id="btnAddProduct">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Agregar Producto
      </button>
    </div>

    <!-- Notificaciones -->
    <div class="notification-container" id="notificationContainer"></div>

    <!-- Estadísticas -->
    <div class="admin-stats">
      <div class="stat-card">
        <div class="stat-value" id="totalProducts">-</div>
        <div class="stat-label">Total Productos</div>
      </div>
      <div class="stat-card">
        <div class="stat-value" id="productsWithImages">-</div>
        <div class="stat-label">Con Imágenes</div>
      </div>
    </div>

    <!-- Búsqueda y Filtros -->
    <div class="admin-filters">
      <div class="search-box">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input
          type="text"
          id="searchInput"
          placeholder="Buscar por nombre, ID o descripción..."
        />
      </div>
    </div>

    <!-- Tabla de Productos -->
    <div class="admin-table-container">
      <table class="admin-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Modelos Compatibles</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="productsTableBody">
          <tr>
            <td colspan="6" style="text-align: center; padding: 3rem;">
              <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem; color: var(--color-gray-500);">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="animation: spin 1s linear infinite;">
                  <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
                  <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"/>
                </svg>
                <p style="margin: 0;">Cargando productos...</p>
              </div>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="empty-state" id="emptyState" style="display: none;">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M20 7h-4M4 7h4m0 0V5a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2m-6 0v10a2 2 0 0 0 2 2h4a2 2 0 0 0 2-2V7"></path>
        </svg>
        <h3>No hay productos</h3>
        <p>Comienza agregando tu primer producto</p>
        <button class="btn-primary" onclick="window.openAddProductModal?.()">
          Agregar Primer Producto
        </button>
      </div>
    </div>
  </div>

  <!-- Loader Overlay -->
  <div class="loader-overlay" id="loaderOverlay" style="display: none;">
    <div class="loader-content">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="loader-spinner">
        <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
        <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"/>
      </svg>
      <p class="loader-message" id="loaderMessage">Cargando...</p>
    </div>
  </div>

  <!-- Modales -->
  <EditProductModal />
  <AddProductModal />
  <DeleteConfirmModal />
</Layout>

<script>
  // Código de acceso
  const ADMIN_CODE = "7773717JV";
  const STORAGE_KEY = "admin_authenticated";

  // Verificar si ya está autenticado
  function checkAuth() {
    const authenticated = sessionStorage.getItem(STORAGE_KEY) === "true";
    return authenticated;
  }

  // Mostrar/ocultar contenido según autenticación
  function toggleAdminContent(show: boolean) {
    const loginScreen = document.getElementById('adminLogin');
    const adminContent = document.getElementById('adminContent');
    
    if (loginScreen && adminContent) {
      if (show) {
        loginScreen.style.display = 'none';
        adminContent.style.display = 'block';
        sessionStorage.setItem(STORAGE_KEY, "true");
      } else {
        loginScreen.style.display = 'flex';
        adminContent.style.display = 'none';
        sessionStorage.removeItem(STORAGE_KEY);
      }
    }
  }

  // Cargar el servicio de productos
  let productService: any = null;
  
  async function getProductService() {
    if (!productService) {
      const module = await import('../utils/productService');
      productService = module.productService;
    }
    return productService;
  }

  // Función para renderizar una fila de producto
  function renderProductRow(product: any) {
    const imagenes = Array.isArray(product.imagen)
      ? product.imagen
      : [product.imagen].filter(Boolean);
    const primeraImagen = imagenes[0] || "/placeholder-producto.jpg";
    
    const tr = document.createElement('tr');
    tr.setAttribute('data-product-id', product.id);
    
    tr.innerHTML = `
      <td class="product-id">${product.id}</td>
      <td class="product-image">
        <img
          src="${primeraImagen}"
          alt="${product.nombre}"
          onerror="this.src='/placeholder-producto.jpg'"
        />
        ${imagenes.length > 1 ? `<span class="image-count">+${imagenes.length - 1}</span>` : ''}
      </td>
      <td class="product-name">${product.nombre}</td>
      <td class="product-description">
        ${product.descripcion ? (product.descripcion.length > 100 ? product.descripcion.substring(0, 100) + '...' : product.descripcion) : ''}
      </td>
      <td class="product-models">
        <div class="models-tags">
          ${product.modelos_compatibles?.slice(0, 3).map((modelo: string) => 
            `<span class="model-tag">${modelo}</span>`
          ).join('') || ''}
          ${product.modelos_compatibles?.length > 3 ? `<span class="model-tag-more">+${product.modelos_compatibles.length - 3}</span>` : ''}
        </div>
      </td>
      <td class="product-actions">
        <button class="btn-edit" data-product-id="${product.id}" title="Editar producto">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
          </svg>
          Editar
        </button>
        <button class="btn-delete" data-product-id="${product.id}" title="Eliminar producto">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
          </svg>
          Eliminar
        </button>
      </td>
    `;
    
    return tr;
  }

  // Función para cargar y renderizar productos
  async function loadAndRenderProducts() {
    try {
      const service = await getProductService();
      const products = await service.getAll();
      
      const tableBody = document.getElementById('productsTableBody');
      const emptyState = document.getElementById('emptyState');
      
      if (!tableBody) return;
      
      // Limpiar tabla
      tableBody.innerHTML = '';
      
      if (products.length === 0) {
        // Mostrar estado vacío
        if (emptyState) {
          emptyState.style.display = 'block';
        }
      } else {
        // Ocultar estado vacío
        if (emptyState) {
          emptyState.style.display = 'none';
        }
        
        // Renderizar productos
        products.forEach((product: any) => {
          tableBody.appendChild(renderProductRow(product));
        });
        
        // Re-asignar event listeners a los botones
        attachProductButtonsListeners();
      }
      
      // Actualizar estadísticas
      const totalProducts = document.getElementById('totalProducts');
      const productsWithImages = document.getElementById('productsWithImages');
      
      if (totalProducts) {
        totalProducts.textContent = products.length.toString();
      }
      
      if (productsWithImages) {
        const withImages = products.filter((p: any) => 
          p.imagen && (Array.isArray(p.imagen) ? p.imagen.length > 0 : p.imagen)
        ).length;
        productsWithImages.textContent = withImages.toString();
      }
    } catch (error) {
      console.error('Error al cargar productos:', error);
      const tableBody = document.getElementById('productsTableBody');
      if (tableBody) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="6" style="text-align: center; padding: 3rem; color: var(--color-gray-500);">
              Error al cargar productos. Por favor, recarga la página.
            </td>
          </tr>
        `;
      }
    }
  }

  // Función para asignar event listeners a los botones de productos
  function attachProductButtonsListeners() {
    // Botones de editar
    document.querySelectorAll('.btn-edit').forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        const productId = (e.currentTarget as HTMLElement).getAttribute('data-product-id');
        if (productId && window.openEditProductModal) {
          window.openEditProductModal(productId);
        }
      });
    });

    // Botones de eliminar
    document.querySelectorAll('.btn-delete').forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        const productId = (e.currentTarget as HTMLElement).getAttribute('data-product-id');
        if (!productId) return;

        const productName = (e.currentTarget as HTMLElement)
          .closest('tr')
          ?.querySelector('.product-name')
          ?.textContent || 'este producto';

        if (window.openDeleteConfirmModal) {
          window.openDeleteConfirmModal(productId, productName);
        }
      });
    });
  }

  // Función para manejar la confirmación de eliminación
  window.onDeleteConfirm = async (productId: string) => {
    try {
      // Mostrar loader
      showLoader('Eliminando producto...');
      
      const service = await getProductService();
      await service.delete(productId);
      
      hideLoader();
      showNotification('Producto Eliminado', 'El producto se ha eliminado correctamente del catálogo.', 'success');
      await loadAndRenderProducts();
    } catch (error: any) {
      hideLoader();
      showNotification('Error', 'Error al eliminar el producto: ' + error.message, 'error');
    }
  };

  // Función para recargar la tabla
  async function reloadProducts() {
    await loadAndRenderProducts();
  }

  document.addEventListener('DOMContentLoaded', () => {
    // Verificar autenticación al cargar
    if (checkAuth()) {
      toggleAdminContent(true);
      // Cargar productos solo si está autenticado
      loadAndRenderProducts();
    } else {
      toggleAdminContent(false);
    }

    // Manejar formulario de login
    const loginForm = document.getElementById('loginForm') as HTMLFormElement;
    const accessCodeInput = document.getElementById('accessCode') as HTMLInputElement;
    const loginError = document.getElementById('loginError') as HTMLElement;

    loginForm?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const enteredCode = accessCodeInput?.value.trim();
      
      if (enteredCode === ADMIN_CODE) {
        // Código correcto
        loginError.style.display = 'none';
        toggleAdminContent(true);
        accessCodeInput.value = '';
        // Cargar productos después de autenticarse
        loadAndRenderProducts();
      } else {
        // Código incorrecto
        loginError.style.display = 'flex';
        accessCodeInput.value = '';
        accessCodeInput.focus();
        
        // Agregar efecto de shake al input
        accessCodeInput.style.animation = 'shake 0.5s ease';
        setTimeout(() => {
          accessCodeInput.style.animation = '';
        }, 500);
      }
    });

    // Cerrar sesión al salir de la página (opcional)
    window.addEventListener('beforeunload', () => {
      // Opcional: mantener sesión o cerrarla
      // sessionStorage.removeItem(STORAGE_KEY);
    });
    // Botón agregar producto
    document.getElementById('btnAddProduct')?.addEventListener('click', () => {
      if (window.openAddProductModal) {
        window.openAddProductModal();
      }
    });

    // Búsqueda
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
        const rows = document.querySelectorAll('#productsTableBody tr');
        
        rows.forEach((row) => {
          const id = row.getAttribute('data-product-id')?.toLowerCase() || '';
          const name = row.querySelector('.product-name')?.textContent?.toLowerCase() || '';
          const description = row.querySelector('.product-description')?.textContent?.toLowerCase() || '';
          
          const matches = 
            id.includes(searchTerm) ||
            name.includes(searchTerm) ||
            description.includes(searchTerm);
          
          (row as HTMLElement).style.display = matches ? '' : 'none';
        });
      });
    }

    // Los event listeners de los botones se asignan en attachProductButtonsListeners()

    // Escuchar eventos de actualización desde los modales
    window.addEventListener('product-updated', () => {
      reloadProducts();
    });

    window.addEventListener('product-created', async () => {
      // Esperar un momento para que el modal se cierre completamente
      await new Promise(resolve => setTimeout(resolve, 200));
      
      // Mostrar notificación
      showNotification('Producto Añadido Exitosamente', 'El producto se ha agregado correctamente al catálogo.', 'success');
      
      // Actualizar la lista de productos
      await reloadProducts();
    });
  });

  // Función para mostrar notificaciones
  function showNotification(title: string, message: string, type: 'success' | 'error' = 'success') {
    const container = document.getElementById('notificationContainer');
    if (!container) return;

    const notification = document.createElement('div');
    notification.className = `notification ${type}`;

    const iconSvg = type === 'success' 
      ? `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="notification-icon">
           <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
           <polyline points="22 4 12 14.01 9 11.01"></polyline>
         </svg>`
      : `<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="notification-icon">
           <circle cx="12" cy="12" r="10"></circle>
           <line x1="12" y1="8" x2="12" y2="12"></line>
           <line x1="12" y1="16" x2="12.01" y2="16"></line>
         </svg>`;

    notification.innerHTML = `
      ${iconSvg}
      <div class="notification-content">
        <h4 class="notification-title">${title}</h4>
        <p class="notification-message">${message}</p>
      </div>
      <button class="notification-close" aria-label="Cerrar notificación">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    `;

    container.appendChild(notification);

    // Cerrar automáticamente después de 5 segundos
    const autoClose = setTimeout(() => {
      closeNotification(notification);
    }, 5000);

    // Cerrar manualmente
    const closeBtn = notification.querySelector('.notification-close');
    closeBtn?.addEventListener('click', () => {
      clearTimeout(autoClose);
      closeNotification(notification);
    });
  }

  function closeNotification(notification: HTMLElement) {
    notification.style.animation = 'notificationSlideOut 0.3s ease-out';
    setTimeout(() => {
      notification.remove();
    }, 300);
  }

  // Funciones para el loader
  function showLoader(message: string = 'Cargando...') {
    const overlay = document.getElementById('loaderOverlay');
    const messageEl = document.getElementById('loaderMessage');
    
    if (overlay && messageEl) {
      messageEl.textContent = message;
      overlay.style.display = 'flex';
      // Forzar reflow para que la animación funcione
      overlay.offsetHeight;
      overlay.style.opacity = '1';
      document.body.style.overflow = 'hidden';
    }
  }

  function hideLoader() {
    const overlay = document.getElementById('loaderOverlay');
    if (overlay) {
      // Animación de salida
      overlay.style.opacity = '0';
      overlay.style.transition = 'opacity 0.3s ease-out';
      
      setTimeout(() => {
        overlay.style.display = 'none';
        overlay.style.transition = '';
        overlay.style.opacity = '';
        document.body.style.overflow = '';
      }, 300);
    }
  }

  // Escuchar eventos del loader
  window.addEventListener('show-loader', ((e: CustomEvent) => {
    showLoader(e.detail?.message || 'Cargando...');
  }) as EventListener);

  window.addEventListener('hide-loader', () => {
    hideLoader();
  });
</script>

