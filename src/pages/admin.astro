---
import Layout from "../layouts/Layout.astro";
import EditProductModal from "../components/admin/EditProductModal.astro";
import AddProductModal from "../components/admin/AddProductModal.astro";
import { productService } from "../utils/productService";

// Código de acceso
const ADMIN_CODE = "7773717JV";

// Cargar productos desde Supabase
let products: any[] = [];

try {
  products = await productService.getAll();
} catch (error) {
  console.error("Error al cargar productos:", error);
  products = [];
}
---

<Layout>
  <!-- Pantalla de Login -->
  <div class="admin-login" id="adminLogin">
    <div class="login-container">
      <div class="login-header">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z"/>
        </svg>
        <h2>Acceso de Administrador</h2>
        <p>Ingresa el código de acceso para continuar</p>
      </div>
      <form id="loginForm" class="login-form">
        <div class="form-group">
          <label for="accessCode">Código de Acceso</label>
          <input
            type="password"
            id="accessCode"
            name="accessCode"
            placeholder="Ingresa el código"
            required
            autocomplete="off"
            autofocus
          />
        </div>
        <button type="submit" class="btn-login">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
            <polyline points="10 17 15 12 10 7"></polyline>
            <line x1="15" y1="12" x2="3" y2="12"></line>
          </svg>
          Ingresar
        </button>
        <div class="login-error" id="loginError" style="display: none;">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="12"></line>
            <line x1="12" y1="16" x2="12.01" y2="16"></line>
          </svg>
          <span>Código incorrecto. Intenta nuevamente.</span>
        </div>
      </form>
    </div>
  </div>

  <!-- Contenido de Admin (oculto hasta autenticación) -->
  <div class="admin-container" id="adminContent" style="display: none;">
    <!-- Header -->
    <div class="admin-header">
      <div>
        <h1>Administración de Productos</h1>
        <p>Gestiona tu catálogo de productos hidráulicos</p>
      </div>
      <button class="btn-primary" id="btnAddProduct">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Agregar Producto
      </button>
    </div>

    <!-- Estadísticas -->
    <div class="admin-stats">
      <div class="stat-card">
        <div class="stat-value" id="totalProducts">{products.length}</div>
        <div class="stat-label">Total Productos</div>
      </div>
      <div class="stat-card">
        <div class="stat-value" id="productsWithImages">
          {products.filter(p => p.imagen && (Array.isArray(p.imagen) ? p.imagen.length > 0 : p.imagen)).length}
        </div>
        <div class="stat-label">Con Imágenes</div>
      </div>
    </div>

    <!-- Búsqueda y Filtros -->
    <div class="admin-filters">
      <div class="search-box">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input
          type="text"
          id="searchInput"
          placeholder="Buscar por nombre, ID o descripción..."
        />
      </div>
    </div>

    <!-- Tabla de Productos -->
    <div class="admin-table-container">
      <table class="admin-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Modelos Compatibles</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="productsTableBody">
          {products.map((product) => {
            const imagenes = Array.isArray(product.imagen)
              ? product.imagen
              : [product.imagen].filter(Boolean);
            const primeraImagen = imagenes[0] || "/placeholder-producto.jpg";
            
            return (
              <tr data-product-id={product.id}>
                <td class="product-id">{product.id}</td>
                <td class="product-image">
                  <img
                    src={primeraImagen}
                    alt={product.nombre}
                    onerror="this.src='/placeholder-producto.jpg'"
                  />
                  {imagenes.length > 1 && (
                    <span class="image-count">+{imagenes.length - 1}</span>
                  )}
                </td>
                <td class="product-name">{product.nombre}</td>
                <td class="product-description">
                  {product.descripcion?.substring(0, 100)}
                  {product.descripcion?.length > 100 ? "..." : ""}
                </td>
                <td class="product-models">
                  <div class="models-tags">
                    {product.modelos_compatibles?.slice(0, 3).map((modelo: string) => (
                      <span class="model-tag">{modelo}</span>
                    ))}
                    {product.modelos_compatibles?.length > 3 && (
                      <span class="model-tag-more">+{product.modelos_compatibles.length - 3}</span>
                    )}
                  </div>
                </td>
                <td class="product-actions">
                  <button
                    class="btn-edit"
                    data-product-id={product.id}
                    title="Editar producto"
                  >
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                    Editar
                  </button>
                  <button
                    class="btn-delete"
                    data-product-id={product.id}
                    title="Eliminar producto"
                  >
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                    Eliminar
                  </button>
                </td>
              </tr>
            );
          })}
        </tbody>
      </table>

      {products.length === 0 && (
        <div class="empty-state">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M20 7h-4M4 7h4m0 0V5a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2m-6 0v10a2 2 0 0 0 2 2h4a2 2 0 0 0 2-2V7"></path>
          </svg>
          <h3>No hay productos</h3>
          <p>Comienza agregando tu primer producto</p>
          <button class="btn-primary" onclick="window.openAddProductModal?.()">
            Agregar Primer Producto
          </button>
        </div>
      )}
    </div>
  </div>

  <!-- Modales -->
  <EditProductModal />
  <AddProductModal />
</Layout>

