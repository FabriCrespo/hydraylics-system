<script>
  // @ts-nocheck
  document.addEventListener('DOMContentLoaded', () => {
    /** @type {Array<any>} */
    const productos = JSON.parse(
      document.getElementById('productosData')?.textContent || '[]'
    );

    /** @type {{ busqueda: HTMLInputElement | null; modelo: HTMLSelectElement | null; stock: HTMLSelectElement | null; imagen: HTMLSelectElement | null; }} */
    const filtros = {
      busqueda: document.getElementById('busqueda'),
      modelo: document.getElementById('modelo'),
      stock: document.getElementById('stock'),
      imagen: document.getElementById('imagen')
    };

    /** @type {HTMLElement | null} */
    const productosGrid = document.getElementById('productosGrid');
    /** @type {HTMLElement | null} */
    const productosCount = document.getElementById('productosCount');
    const btnFiltrar = document.getElementById('btnFiltrar');
    const btnLimpiar = document.getElementById('btnLimpiar');
    const imagenesProductos = Array.from(document.querySelectorAll('.producto-imagen img'));
    const modal = document.getElementById('detalleModal');
    const modalOverlay = document.getElementById('modalOverlay');
    const modalCerrar = document.getElementById('modalCerrar');
    const modalTitulo = document.getElementById('modalTitulo');
    const modalCodigo = document.getElementById('modalCodigo');
    const modalDescripcion = document.getElementById('modalDescripcion');
    const modalCompatibilidad = document.getElementById('modalCompatibilidad');
    const modalStock = document.getElementById('modalStock');
    const modalImagen = document.getElementById('modalImagen');
    const modalCotizar = document.getElementById('modalCotizar');

    let productoActual = null;
    let cartManager = window.cartManager ?? null;

    if (!cartManager) {
      document.addEventListener(
        'cart-ready',
        () => {
          cartManager = window.cartManager ?? null;
        },
        { once: true }
      );
    }

    const ajustarImagen = (img) => {
      if (!img || !img.complete || !img.naturalWidth || !img.naturalHeight) return;
      if (img.naturalWidth > img.naturalHeight) {
        img.classList.add('is-wide');
      }
    };

    imagenesProductos.forEach((img) => {
      if (img.complete) {
        ajustarImagen(img);
      } else {
        img.addEventListener('load', () => ajustarImagen(img));
      }
    });

    const abrirModal = (producto) => {
      if (!modal) return;
      productoActual = producto;

      if (modalTitulo) modalTitulo.textContent = producto.nombre ?? 'Producto sin nombre';
      if (modalCodigo) modalCodigo.textContent = `ID: ${producto.id}`;
      if (modalDescripcion) modalDescripcion.textContent = producto.descripcion ?? 'Sin descripción disponible.';

      if (modalImagen) {
        modalImagen.src = producto.imagen ?? '/placeholder-producto.jpg';
        modalImagen.alt = producto.nombre ?? 'Producto hidráulico';
      }

      if (modalCompatibilidad) {
        modalCompatibilidad.innerHTML = '';
        const modelos = producto.modelos_compatibles ?? [];
        if (modelos.length === 0) {
          const span = document.createElement('span');
          span.className = 'modal-tag';
          span.textContent = 'Sin referencias registradas';
          modalCompatibilidad.appendChild(span);
        } else {
          modelos.slice(0, 12).forEach((modelo) => {
            const span = document.createElement('span');
            span.className = 'modal-tag';
            span.textContent = modelo;
            modalCompatibilidad.appendChild(span);
          });
        }
      }

      if (modalStock) {
        const stock = producto.stock ?? 0;
        const estado = stock > 0 ? 'disponible' : 'sin stock';
        modalStock.innerHTML = `<div class="modal-stock">Stock ${estado}: <strong>${stock}</strong> unidades</div>`;
      }

      modal.setAttribute('aria-hidden', 'false');
      modal.classList.add('is-active');
      document.body.style.overflow = 'hidden';
    };

    const cerrarModal = () => {
      if (!modal) return;
      modal.classList.remove('is-active');
      modal.setAttribute('aria-hidden', 'true');
      const carritoAbierto = cartManager?.isOpen?.() ?? false;
      document.body.style.overflow = carritoAbierto ? 'hidden' : '';
      productoActual = null;
    };

    const stockMatchers = {
      alto: (stock) => stock > 100,
      medio: (stock) => stock >= 50 && stock <= 100,
      bajo: (stock) => stock > 0 && stock < 50,
      sin: (stock) => stock === 0
    };

    const filtrar = () => {
      if (!productosGrid || !productosCount) return;

      const termino = (filtros.busqueda?.value || '').trim().toLowerCase();
      const modelo = (filtros.modelo?.value || '').trim().toLowerCase();
      const stockFiltro = filtros.stock?.value || '';
      const imagenFiltro = filtros.imagen?.value || '';
      const coincideStock = stockMatchers[stockFiltro] || (() => true);

      const cards = /** @type {HTMLElement[]} */ (Array.from(productosGrid.children));
      let visibles = 0;

      cards.forEach((card) => {
        const nombre = card.querySelector('.producto-nombre')?.textContent?.toLowerCase() || '';
        const codigo = card.querySelector('.producto-codigo')?.textContent?.toLowerCase() || '';
        const descripcion = card.querySelector('.producto-descripcion')?.textContent?.toLowerCase() || '';
        const modelos = (card.dataset.modelos || '')
          .split(',')
          .map((m) => m.trim().toLowerCase())
          .filter(Boolean);
        const stock = Number(card.dataset.stock || '0');
        const tieneImagen = card.dataset.imagen === 'true';

        const coincideBusqueda =
          !termino || nombre.includes(termino) || codigo.includes(termino) || descripcion.includes(termino);
        const coincideModelo = !modelo || modelos.includes(modelo);
        const coincideImagen =
          !imagenFiltro ||
          (imagenFiltro === 'true' && tieneImagen) ||
          (imagenFiltro === 'false' && !tieneImagen);

        if (coincideBusqueda && coincideModelo && coincideStock(stock) && coincideImagen) {
          card.style.display = 'block';
          visibles += 1;
        } else {
          card.style.display = 'none';
        }
      });

      productosCount.textContent = `${visibles} productos`;
    };

    const limpiar = () => {
      Object.values(filtros).forEach((filtro) => {
        if (!filtro) return;
        if ('value' in filtro) filtro.value = '';
        if ('selectedIndex' in filtro) filtro.selectedIndex = 0;
      });
      filtrar();
    };

    btnFiltrar?.addEventListener('click', filtrar);
    btnLimpiar?.addEventListener('click', limpiar);
    filtros.busqueda?.addEventListener('input', filtrar);
    filtros.modelo?.addEventListener('change', filtrar);
    filtros.stock?.addEventListener('change', filtrar);
    filtros.imagen?.addEventListener('change', filtrar);

    const obtenerCantidadDesdeCard = (card) => {
      if (!card) return 1;
      const input = card.querySelector('.cantidad-input');
      const valor = Number(input?.value) || 1;
      const cantidadNormalizada = Math.max(1, Math.floor(valor));
      if (input) {
        input.value = String(cantidadNormalizada);
      }
      return cantidadNormalizada;
    };

    productosGrid?.querySelectorAll('.cantidad-control').forEach((control) => {
      const input = control.querySelector('.cantidad-input');
      const decrementar = control.querySelector('[data-action="decremento"]');
      const incrementar = control.querySelector('[data-action="incremento"]');

      const actualizarCantidad = (delta) => {
        if (!input) return;
        const actual = Number(input.value) || 1;
        const nuevo = Math.max(1, actual + delta);
        input.value = String(nuevo);
      };

      decrementar?.addEventListener('click', () => actualizarCantidad(-1));
      incrementar?.addEventListener('click', () => actualizarCantidad(1));

      input?.addEventListener('input', () => {
        obtenerCantidadDesdeCard(control.closest('.producto-card'));
      });
    });

    productosGrid?.querySelectorAll('.producto-info-button').forEach((btn) => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-producto-id');
        const producto = productos.find((item) => item.id === id);
        if (!producto) return;
        abrirModal(producto);
      });
    });

    productosGrid?.querySelectorAll('.btn-agregar-carrito').forEach((btn) => {
      btn.addEventListener('click', () => {
        const id = btn.getAttribute('data-producto-id');
        const producto = productos.find((item) => item.id === id);
        if (!producto) return;

        const card = btn.closest('.producto-card');
        const cantidad = obtenerCantidadDesdeCard(card);

        const ejecutarAgregado = (manager) => {
          manager?.addItem(
            {
              id: producto.id,
              nombre: producto.nombre ?? 'Producto sin nombre',
              imagen: producto.imagen ?? null,
              stock: Number(producto.stock ?? 0)
            },
            cantidad
          );
        };

        if (cartManager) {
          ejecutarAgregado(cartManager);
        } else {
          document.addEventListener(
            'cart-ready',
            () => {
              ejecutarAgregado(window.cartManager ?? null);
            },
            { once: true }
          );
        }
      });
    });

    modalCerrar?.addEventListener('click', cerrarModal);
    modalOverlay?.addEventListener('click', cerrarModal);

    modalCotizar?.addEventListener('click', () => {
      if (!productoActual) return;

      const mensaje = `Solicitud de cotización\n\nProducto: ${productoActual.nombre}\nID: ${productoActual.id}\nStock: ${productoActual.stock ?? 0}`;
      const url = `https://api.whatsapp.com/send?phone=59169200281&text=${encodeURIComponent(mensaje)}`;
      window.open(url, '_blank');
    });

    document.addEventListener('keydown', (event) => {
      if (event.key === 'Escape' && modal?.classList.contains('is-active')) {
        cerrarModal();
      }
    });

    filtrar();
  });
</script>