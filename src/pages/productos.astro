<script>
  // Funcionalidad de filtros
  document.addEventListener('DOMContentLoaded', function() {
    const filtros = {
      busqueda: document.getElementById('busqueda') as HTMLInputElement | null,
      categoria: document.getElementById('categoria') as HTMLSelectElement | null,
      marca: document.getElementById('marca') as HTMLSelectElement | null,
      maquina: document.getElementById('maquina') as HTMLSelectElement | null
    };

    const productosGrid = document.getElementById('productosGrid');
    const productosCount = document.getElementById('productosCount');
    const btnFiltrar = document.getElementById('btnFiltrar');
    const btnLimpiar = document.getElementById('btnLimpiar');

    function filtrarProductos() {
      if (!filtros.busqueda || !filtros.categoria || !filtros.marca || !filtros.maquina || !productosGrid || !productosCount) {
        return;
      }

      const terminoBusqueda = filtros.busqueda.value.toLowerCase();
      const categoriaSeleccionada = filtros.categoria.value;
      const marcaSeleccionada = filtros.marca.value;
      const maquinaSeleccionada = filtros.maquina.value;

      const productos = productosGrid.querySelectorAll('.producto-card');
      let productosVisibles = 0;

      productos.forEach(producto => {
        const productoElement = producto as HTMLElement;
        const nombreElement = producto.querySelector('.producto-nombre');
        const codigoElement = producto.querySelector('.producto-codigo');

        if (!nombreElement || !codigoElement) return;

        const nombre = nombreElement.textContent?.toLowerCase() || '';
        const codigo = codigoElement.textContent?.toLowerCase() || '';
        const categoria = productoElement.dataset.categoria;
        const marca = productoElement.dataset.marca;
        const maquina = productoElement.dataset.maquina;

        const coincideBusqueda = !terminoBusqueda || 
          nombre.includes(terminoBusqueda) || 
          codigo.includes(terminoBusqueda);

        const coincideCategoria = !categoriaSeleccionada || categoria === categoriaSeleccionada;
        const coincideMarca = !marcaSeleccionada || marca === marcaSeleccionada;
        const coincideMaquina = !maquinaSeleccionada || maquina === maquinaSeleccionada;

        if (coincideBusqueda && coincideCategoria && coincideMarca && coincideMaquina) {
          productoElement.style.display = 'block';
          productosVisibles++;
        } else {
          productoElement.style.display = 'none';
        }
      });

      productosCount.textContent = `${productosVisibles} productos`;
    }

    function limpiarFiltros() {
      Object.values(filtros).forEach(filtro => {
        if (!filtro) return;
        if (filtro instanceof HTMLInputElement) {
          filtro.value = '';
        } else if (filtro instanceof HTMLSelectElement) {
          filtro.selectedIndex = 0;
        }
      });
      filtrarProductos();
    }

    // Event listeners
    btnFiltrar?.addEventListener('click', filtrarProductos);
    btnLimpiar?.addEventListener('click', limpiarFiltros);

    // Filtro en tiempo real para búsqueda
    filtros.busqueda?.addEventListener('input', filtrarProductos);

    // Filtro automático para selects
    [filtros.categoria, filtros.marca, filtros.maquina].forEach(select => {
      select?.addEventListener('change', filtrarProductos);
    });

    // Funcionalidad de cotización
    document.querySelectorAll('.btn-cotizar').forEach(btn => {
      btn.addEventListener('click', function(this: HTMLElement) {
        const productoCard = (this as HTMLElement).closest('.producto-card') as HTMLElement;
        if (!productoCard) return;

        const codigoElement = productoCard.querySelector('.producto-codigo');
        const nombreElement = productoCard.querySelector('.producto-nombre');

        if (!codigoElement || !nombreElement) return;

        const codigo = codigoElement.textContent || '';
        const nombre = nombreElement.textContent || '';
        
        const mensaje = `*Solicitud de Cotización*\n\n` +
          `*Producto:* ${nombre}\n` +
          `*Código:* ${codigo}\n\n` +
          `Hola, me interesa este producto. ¿Podrían enviarme información de precios y disponibilidad?`;
        
        const mensajeCodificado = encodeURIComponent(mensaje);
        const whatsappURL = `https://api.whatsapp.com/send?phone=59169200281&text=${mensajeCodificado}`;
        
        window.open(whatsappURL, '_blank');
      });
    });

    // Funcionalidad de detalles
    document.querySelectorAll('.btn-detalles').forEach(btn => {
      btn.addEventListener('click', function(this: HTMLElement) {
        const productoCard = (this as HTMLElement).closest('.producto-card') as HTMLElement;
        if (!productoCard) return;

        const codigoElement = productoCard.querySelector('.producto-codigo');
        const nombreElement = productoCard.querySelector('.producto-nombre');

        if (!codigoElement || !nombreElement) return;

        const codigo = codigoElement.textContent || '';
        const nombre = nombreElement.textContent || '';
        
        alert(`Detalles del producto:\n\n${nombre}\n${codigo}\n\nPróximamente disponible información detallada.`);
      });
    });
  });
</script>