---
import Layout from '../layouts/Layout.astro';
import productsData from '../data/products.json';

const products = productsData;
const modelOptions = Array.from(
  new Set(products.flatMap((product) => product.modelos_compatibles ?? []))
).sort((a, b) => a.localeCompare(b));
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-productos">
    <div class="hero-background">
      <img src="/her-products.png" alt="Componentes hidráulicos" />
    </div>
    <div class="hero-content-productos">
      <div class="hero-badge-productos">Nuestros Productos</div>
      <h1 class="hero-title-productos">
        Componentes <span class="highlight-productos">Hidráulicos</span> de Calidad
      </h1>
      <p class="hero-subtitle-productos">
        Encuentra la pieza perfecta para tu maquinaria. Repuestos originales y compatibles para todas las marcas
      </p>
    </div>
  </section>

  <!-- Filtros y Búsqueda -->
  <section class="filtros-section">
    <div class="container-productos">
      <div class="filtros-header">
        <h2>Buscar Productos</h2>
        <p>Filtra por categoría, marca o tipo de máquina</p>
      </div>
      
      <div class="filtros-grid">
        <div class="filtro-group">
          <label for="busqueda">Buscar</label>
          <div class="search-input">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
            <input type="text" id="busqueda" placeholder="Buscar por nombre o ID...">
          </div>
        </div>

        <div class="filtro-group">
          <label for="modelo">Modelo compatible</label>
          <select id="modelo">
            <option value="">Todos los modelos</option>
            {
              modelOptions.map((modelo) => (
                <option value={modelo}>{modelo}</option>
              ))
            }
          </select>
        </div>

        <div class="filtro-group">
          <label for="stock">Disponibilidad</label>
          <select id="stock">
            <option value="">Todos</option>
            <option value="alto">Stock alto (&gt; 100)</option>
            <option value="medio">Stock medio (50 - 100)</option>
            <option value="bajo">Stock bajo (&lt; 50)</option>
            <option value="sin">Sin stock</option>
          </select>
        </div>

        <div class="filtro-group">
          <label for="imagen">Imagen disponible</label>
          <select id="imagen">
            <option value="">Todos</option>
            <option value="true">Solo con imagen</option>
            <option value="false">Solo sin imagen</option>
          </select>
        </div>
      </div>

      <div class="filtros-actions">
        <button class="btn-filtrar" id="btnFiltrar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="22,3 2,3 10,12.46 10,19 14,21 14,12.46 22,3"/>
          </svg>
          Filtrar Productos
        </button>
        <button class="btn-limpiar" id="btnLimpiar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
          </svg>
          Limpiar Filtros
        </button>
      </div>
    </div>
  </section>

  <!-- Resultados -->
  <section class="resultados-section">
    <div class="container-productos">
      <div class="resultados-header">
        <div class="resultados-info">
          <h3>Productos Encontrados</h3>
          <span class="productos-count" id="productosCount">{products.length} productos</span>
        </div>
        <div class="ordenar">
          <label for="ordenar">Ordenar por:</label>
          <select id="ordenar">
            <option value="nombre">Nombre</option>
            <option value="codigo">Código</option>
            <option value="marca">Marca</option>
            <option value="precio">Precio</option>
          </select>
        </div>
      </div>

      <!-- Grid de Productos -->
      <div class="productos-grid" id="productosGrid">
        {
          products.map((producto) => {
            const modelos = producto.modelos_compatibles ?? [];
            const stock = producto.stock ?? 0;
            const tieneImagen = Boolean(producto.imagen);

            return (
              <div
                class="producto-card"
                data-modelos={modelos.join(',')}
                data-stock={stock}
                data-imagen={tieneImagen ? 'true' : 'false'}
              >
                <div class="producto-imagen">
                  {stock > 100 && <div class="producto-badge">Stock alto</div>}
                  <button
                    class="producto-info-button"
                    type="button"
                    aria-label={`Más información de ${producto.nombre}`}
                    data-producto-id={producto.id}
                  >
                    <svg
                      width="18"
                      height="18"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <circle cx="12" cy="12" r="10" />
                      <line x1="12" y1="16" x2="12" y2="12" />
                      <line x1="12" y1="8" x2="12.01" y2="8" />
                    </svg>
                  </button>
                  <img
                    src={producto.imagen ?? '/placeholder-producto.jpg'}
                    alt={producto.nombre}
                    loading="lazy"
                  />
                </div>
                <div class="producto-info">
                  <div class="producto-codigo">ID: {producto.id}</div>
                  <h4 class="producto-nombre">{producto.nombre}</h4>
                  <p class="producto-descripcion">{producto.descripcion}</p>
                  <div class="producto-details">
                    <span class="producto-funcion">Stock: {stock} unidades</span>
                    {modelos.length > 0 && (
                      <span class="producto-maquina">
                        Compatible: {modelos.slice(0, 3).join(', ')}
                        {modelos.length > 3 ? '…' : ''}
                      </span>
                    )}
                  </div>
                  <div class="producto-actions">
                    <div class="cantidad-control" data-producto-id={producto.id}>
                      <button
                        class="cantidad-btn"
                        type="button"
                        data-action="decremento"
                        aria-label="Disminuir cantidad"
                      >
                        &minus;
                      </button>
                      <input
                        class="cantidad-input"
                        type="number"
                        min="1"
                        step="1"
                        value="1"
                        inputmode="numeric"
                        aria-label="Cantidad"
                      />
                      <button
                        class="cantidad-btn"
                        type="button"
                        data-action="incremento"
                        aria-label="Aumentar cantidad"
                      >
                        +
                      </button>
                    </div>
                    <button class="btn-agregar-carrito" type="button" data-producto-id={producto.id}>
                      <svg
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        aria-hidden="true"
                      >
                        <circle cx="9" cy="21" r="1" />
                        <circle cx="20" cy="21" r="1" />
                        <path d="M1 1h4l2.68 13.39a2 2 0 001.95 1.61h9.72a2 2 0 001.95-1.61l1.75-9.78H6.5" />
                      </svg>
                      Agregar al carrito
                    </button>
                  </div>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>

  <div class="modal-detalle" id="detalleModal" aria-hidden="true">
    <div class="modal-overlay" id="modalOverlay"></div>
    <div class="modal-container" role="dialog" aria-modal="true" aria-labelledby="modalTitulo">
      <button class="modal-close" id="modalCerrar" aria-label="Cerrar detalla de producto">
        <span>&times;</span>
      </button>
      <div class="modal-content">
        <div class="modal-image" id="modalImagenWrapper">
          <img id="modalImagen" src="" alt="" />
        </div>
        <div class="modal-info">
          <span class="modal-badge">Detalle de producto</span>
          <h3 id="modalTitulo"></h3>
          <p class="modal-codigo" id="modalCodigo"></p>
          <p class="modal-descripcion" id="modalDescripcion"></p>
          <div class="modal-section">
            <h4>Compatibilidad</h4>
            <div class="modal-tags" id="modalCompatibilidad"></div>
          </div>
          <div class="modal-section" id="modalStock"></div>
          <div class="modal-actions">
            <button class="btn-cotizar" id="modalCotizar">Solicitar cotización</button>
          </div>
        </div>
      </div>
    </div>
  </div>

</Layout>

<style>
  /* Hero Productos */
  .hero-productos {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-productos::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(34, 30, 28, 0.6) 0%, rgba(34, 30, 28, 0.35) 100%);
    z-index: 0;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: -1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    min-height: 100%;
    min-width: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .hero-content-productos {
    position: relative;
    text-align: center;
    z-index: 1;
    max-width: 900px;
    padding: 2rem;
    animation: fadeInUp 1s ease-out;
  }

  .hero-badge-productos {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(225, 51, 44, 0.2);
    border: 1px solid var(--color-secondary);
    color: var(--color-secondary);
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-title-productos {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--color-primary);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .highlight-productos {
    color: var(--color-secondary);
    position: relative;
  }

  .hero-subtitle-productos {
    font-size: clamp(1rem, 2vw, 1.3rem);
    color: rgba(241, 236, 232, 0.85);
    margin-bottom: 0;
  }

  /* Container */
  .container-productos {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Filtros */
  .filtros-section {
    padding: 4rem 0;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .filtros-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .filtros-header h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-tertiary);
    margin-bottom: 1rem;
  }

  .filtros-header p {
    font-size: 1.1rem;
    color: var(--color-gray-600);
  }

  .filtros-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .filtro-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filtro-group label {
    font-weight: 600;
    color: var(--color-tertiary);
    font-size: 0.95rem;
  }

  .filtro-group select {
    padding: 1rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
    background: var(--color-white);
  }

  .filtro-group select:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
  }

  .search-input {
    position: relative;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: var(--color-gray-400);
  }

  .search-input input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .search-input input:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
  }

  .filtros-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn-filtrar,
  .btn-limpiar {
    padding: 1rem 2rem;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-filtrar {
    background: var(--color-secondary);
    color: var(--color-white);
    box-shadow: 0 5px 15px rgba(225, 51, 44, 0.3);
  }

  .btn-filtrar:hover {
    background: var(--color-secondary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(225, 51, 44, 0.4);
  }

  .btn-limpiar {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
    border: 2px solid var(--color-gray-300);
  }

  .btn-limpiar:hover {
    background: var(--color-gray-200);
    transform: translateY(-2px);
  }

  /* Resultados */
  .resultados-section {
    padding: 4rem 0;
    background: var(--color-gray-50);
  }

  .resultados-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .resultados-info h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-tertiary);
    margin-bottom: 0.5rem;
  }

  .productos-count {
    color: var(--color-gray-600);
    font-size: 1rem;
  }

  .ordenar {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .ordenar label {
    font-weight: 600;
    color: var(--color-tertiary);
  }

  .ordenar select {
    padding: 0.8rem 1rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 8px;
    font-size: 0.95rem;
    background: var(--color-white);
  }

  /* Grid de Productos */
  .productos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .producto-card {
    background: var(--color-white);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px var(--color-overlay-light);
    transition: all 0.3s ease;
    border: 1px solid var(--color-gray-100);
    display: flex;
    flex-direction: column;
  }

  .producto-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px var(--color-overlay);
  }

  .producto-imagen {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    background: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 1.2rem;
    border: 1px solid var(--color-gray-200);
    border-radius: 12px;
  }

  .producto-imagen img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  .producto-imagen img.is-wide {
    transform: scale(0.9);
  }

  .producto-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--color-secondary);
    color: var(--color-white);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .producto-info-button {
    position: absolute;
    top: 1rem;
    left: 1rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: none;
    background: rgba(24, 20, 18, 0.12);
    color: var(--color-tertiary);
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(24, 20, 18, 0.08);
  }

  .producto-info-button:hover {
    background: rgba(225, 51, 44, 0.18);
    color: var(--color-secondary);
    transform: translateY(-1px);
  }

  .producto-info {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
    flex: 1;
  }

  .producto-codigo {
    font-size: 0.85rem;
    color: var(--color-gray-500);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .producto-nombre {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--color-tertiary);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .producto-descripcion {
    font-size: 0.9rem;
    color: var(--color-gray-600);
    line-height: 1.4;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .producto-details {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .producto-funcion,
  .producto-maquina {
    background: var(--color-primary);
    color: var(--color-tertiary);
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .producto-marca {
    color: var(--color-gray-600);
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .producto-actions {
    display: flex;
    flex-direction: column;
    gap: 0.85rem;
    margin-top: auto;
  }

  .cantidad-control {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: var(--color-primary);
    border: 1px solid var(--color-gray-200);
    border-radius: 999px;
    padding: 0.35rem 0.75rem;
    width: fit-content;
  }

  .cantidad-btn {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: none;
    background: var(--color-white);
    color: var(--color-tertiary);
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .cantidad-btn:hover {
    background: var(--color-secondary);
    color: var(--color-white);
    transform: translateY(-1px);
  }

  .cantidad-input {
    width: 48px;
    text-align: center;
    border: none;
    background: transparent;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-tertiary);
    appearance: textfield;
  }

  .cantidad-input::-webkit-outer-spin-button,
  .cantidad-input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .btn-agregar-carrito {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.85rem 1.25rem;
    border: none;
    border-radius: 10px;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    background: var(--color-secondary);
    color: var(--color-white);
    box-shadow: 0 6px 20px rgba(225, 51, 44, 0.28);
  }

  .btn-agregar-carrito:hover {
    background: var(--color-secondary-dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(225, 51, 44, 0.35);
  }


  /* Modal Detalle */
  .modal-detalle {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 999;
  }

  .modal-detalle.is-active {
    opacity: 1;
    pointer-events: auto;
  }

  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(24, 20, 18, 0.65);
    backdrop-filter: blur(4px);
  }

  .modal-container {
    position: relative;
    background: var(--color-white);
    border-radius: 20px;
    box-shadow: 0 25px 80px rgba(34, 30, 28, 0.25);
    max-width: 960px;
    width: min(960px, 95vw);
    overflow: hidden;
    z-index: 1;
    transform: translateY(20px);
    transition: transform 0.35s ease;
  }

  .modal-detalle.is-active .modal-container {
    transform: translateY(0);
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    border: none;
    background: rgba(24, 20, 18, 0.08);
    color: var(--color-tertiary);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  .modal-close:hover {
    background: rgba(225, 51, 44, 0.12);
    transform: rotate(90deg);
  }

  .modal-content {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 2rem;
    padding: 3rem;
  }

  .modal-image {
    background: var(--color-gray-100);
    border-radius: 16px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .modal-image img {
    width: 100%;
    aspect-ratio: 4 / 3;
    object-fit: contain;
    border-radius: 12px;
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
  }

  .modal-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    color: var(--color-tertiary);
  }

  .modal-badge {
    align-self: flex-start;
    padding: 0.35rem 1rem;
    border-radius: 999px;
    background: rgba(225, 51, 44, 0.12);
    color: var(--color-secondary);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .modal-info h3 {
