---
import Layout from "../layouts/Layout.astro";
import ProductModal from "../components/ProductModal.astro";
---

<Layout>
  <!-- Filtros y B√∫squeda -->
  <section class="filtros-section">
    <div class="container-productos">
      <div class="filtros-header">
        <h2>Buscar Productos</h2>
        <p>Filtra por categor√≠a, marca o tipo de m√°quina</p>
      </div>

      <div class="filtros-grid">
        <div class="filtro-group">
          <label for="busqueda">Buscar</label>
          <div class="search-input">
            <svg
              class="search-icon"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input
              type="text"
              id="busqueda"
              placeholder="Buscar por nombre o ID..."
            />
          </div>
        </div>

        <div class="filtro-group">
          <label for="modelo">Modelo compatible</label>
          <select id="modelo">
            <option value="">Todos los modelos</option>
          </select>
        </div>

        <div class="filtro-group">
          <label for="imagen">Imagen disponible</label>
          <select id="imagen">
            <option value="">Todos</option>
            <option value="true">Solo con imagen</option>
            <option value="false">Solo sin imagen</option>
          </select>
        </div>
      </div>

      <div class="filtros-actions">
        <button class="btn-filtrar" id="btnFiltrar">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <polygon points="22,3 2,3 10,12.46 10,19 14,21 14,12.46 22,3"
            ></polygon>
          </svg>
          Filtrar Productos
        </button>
        <button class="btn-limpiar" id="btnLimpiar">
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              d="M3 6h18M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"
            ></path>
          </svg>
          Limpiar Filtros
        </button>
      </div>
    </div>
  </section>

  <!-- Resultados -->
  <section class="resultados-section">
    <div class="container-productos">
      <div class="resultados-header">
        <div class="resultados-info">
          <h3>Productos Encontrados</h3>
          <span class="productos-count" id="productosCount">Cargando...</span>
        </div>
        <div class="ordenar">
          <label for="ordenar">Ordenar por:</label>
          <select id="ordenar">
            <option value="nombre">Nombre</option>
            <option value="codigo">C√≥digo</option>
            <option value="marca">Marca</option>
            <option value="precio">Precio</option>
          </select>
        </div>
      </div>

      <!-- Grid de Productos -->
      <div class="productos-grid" id="productosGrid">
        <div class="loading-state" id="loadingState">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" stroke-opacity="0.25"/>
            <path d="M12 2a10 10 0 0 1 10 10" stroke-linecap="round"/>
          </svg>
          <p>Cargando productos...</p>
        </div>
      </div>
    </div>
  </section>

  <ProductModal products={[]} phoneNumber="59170405030" />
</Layout>

<style>
  /* Hero Productos */
  .hero-productos {
    position: relative;
    min-height: 60vh;
    height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-productos::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(34, 30, 28, 0.6) 0%,
      rgba(34, 30, 28, 0.35) 100%
    );
    z-index: 0;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  @media (max-width: 768px) {
    .hero-productos {
      min-height: 50vh;
      height: 50vh;
    }

    .hero-background img {
      object-position: center center;
    }
  }

  @media (max-width: 480px) {
    .hero-productos {
      min-height: 45vh;
      height: 45vh;
    }
  }

  .hero-content-productos {
    position: relative;
    text-align: center;
    z-index: 1;
    max-width: 900px;
    padding: 2rem;
    animation: fadeInUp 1s ease-out;
  }

  .hero-badge-productos {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(225, 51, 44, 0.2);
    border: 1px solid var(--color-secondary);
    color: var(--color-secondary);
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-title-productos {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--color-primary);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .highlight-productos {
    color: var(--color-secondary);
    position: relative;
  }

  .hero-subtitle-productos {
    font-size: clamp(1rem, 2vw, 1.3rem);
    color: rgba(241, 236, 232, 0.85);
    margin-bottom: 0;
  }

  /* Container */
  .container-productos {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Filtros */
  .filtros-section {
    padding: 4rem 0;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .filtros-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .filtros-header h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-tertiary);
    margin-bottom: 1rem;
  }

  .filtros-header p {
    font-size: 1.1rem;
    color: var(--color-gray-600);
  }

  .filtros-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .filtro-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filtro-group label {
    font-weight: 600;
    color: var(--color-tertiary);
    font-size: 0.95rem;
  }

  .filtro-group select {
    padding: 1rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
    background: var(--color-white);
  }

  .filtro-group select:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
  }

  .search-input {
    position: relative;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: var(--color-gray-400);
  }

  .search-input input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .search-input input:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
  }

  .filtros-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn-filtrar,
  .btn-limpiar {
    padding: 1rem 2rem;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-filtrar {
    background: var(--color-secondary);
    color: var(--color-white);
    box-shadow: 0 2px 8px rgba(225, 51, 44, 0.2);
  }

  .btn-filtrar:hover {
    background: var(--color-secondary-dark);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(225, 51, 44, 0.25);
  }

  .btn-limpiar {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
    border: 2px solid var(--color-gray-300);
  }

  .btn-limpiar:hover {
    background: var(--color-gray-200);
    transform: translateY(-2px);
  }

  /* Resultados */
  .resultados-section {
    padding: 4rem 0;
    background: var(--color-gray-50);
  }

  .resultados-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .resultados-info h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-tertiary);
    margin-bottom: 0.5rem;
  }

  .productos-count {
    color: var(--color-gray-600);
    font-size: 1rem;
  }

  .ordenar {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .ordenar label {
    font-weight: 600;
    color: var(--color-tertiary);
  }

  .ordenar select {
    padding: 0.8rem 1rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 8px;
    font-size: 0.95rem;
    background: var(--color-white);
  }

  /* Grid de Productos */
  .productos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .filtros-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .resultados-header {
      flex-direction: column;
      align-items: stretch;
      text-align: center;
    }

    .productos-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .hero-productos {
      min-height: 50vh;
    }

    .filtros-section,
    .resultados-section {
      padding: 3rem 0;
    }

    .productos-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .loading-state {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    color: var(--color-gray-500);
  }

  .loading-state svg {
    animation: spin 1s linear infinite;
    margin-bottom: 1rem;
    color: var(--color-secondary);
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .loading-state p {
    font-size: 1rem;
    margin: 0;
  }

  /* Los estilos de ProductCard est√°n en src/styles/productCard.css y se importan globalmente en Layout.astro */

</style>

<script>
  // @ts-nocheck
  document.addEventListener("DOMContentLoaded", async () => {
    console.log('üé¨ [productos.astro] DOM cargado, iniciando carga de productos...');
    /** @type {Array<any>} */
    let productos = [];
    
    // Cargar productos desde Supabase (con fallback autom√°tico a JSON)
    try {
      console.log('üì• [productos.astro] Importando productService...');
      const { productService } = await import('../utils/productService');
      console.log('‚úÖ [productos.astro] productService importado correctamente');
      
      console.log('üîÑ [productos.astro] Llamando a productService.getAll()...');
      productos = await productService.getAll();
      console.log('‚úÖ [productos.astro] Productos obtenidos:', productos.length);
      console.log('üìã [productos.astro] Lista de productos recibidos:');
      productos.forEach((p, index) => {
        console.log(`  ${index + 1}. ID: ${p.id}, Nombre: ${p.nombre?.substring(0, 50)}...`);
      });
      
      // Verificar si est√°n los nuevos productos
      const nuevosProductos = productos.filter(p => 
        p.id.includes('rexroth') || p.id.includes('kit-componentes')
      );
      console.log('üÜï [productos.astro] Productos REXROTH en la lista:', nuevosProductos.length);
      if (nuevosProductos.length > 0) {
        nuevosProductos.forEach(p => {
          console.log('  ‚úÖ Encontrado:', p.id, '-', p.nombre);
        });
      } else {
        console.warn('  ‚ö†Ô∏è NO se encontraron los productos REXROTH en la lista');
      }
      
      if (productos.length === 0) {
        console.warn('‚ö†Ô∏è [productos.astro] No se encontraron productos (ni en Supabase ni en JSON)');
        // Mostrar mensaje si no hay productos en absoluto
        const productosGrid = document.getElementById("productosGrid");
        if (productosGrid) {
          productosGrid.innerHTML = `
            <div style="grid-column: 1 / -1; text-align: center; padding: 4rem 2rem; color: var(--color-gray-500);">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-bottom: 1rem;">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
              </svg>
              <p style="margin: 0; font-size: 1rem;">No se encontraron productos disponibles.</p>
            </div>
          `;
        }
        return;
      }
    } catch (error) {
      console.error('‚ùå [productos.astro] Error cr√≠tico al cargar productos:', error);
      console.error('‚ùå [productos.astro] Stack trace:', error.stack);
      // Mostrar mensaje de error solo si hay un error cr√≠tico
      const productosGrid = document.getElementById("productosGrid");
      if (productosGrid) {
        productosGrid.innerHTML = `
          <div style="grid-column: 1 / -1; text-align: center; padding: 4rem 2rem; color: var(--color-gray-500);">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-bottom: 1rem;">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="8" x2="12" y2="12"/>
              <line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
            <p style="margin: 0; font-size: 1rem;">Error al cargar productos. Por favor, recarga la p√°gina.</p>
          </div>
        `;
      }
      return;
    }
    
    // El modal no necesita actualizaci√≥n ya que usa la funci√≥n abrirModalProducto
    // que recibe el producto directamente

    // Renderizar productos
    const productosGrid = document.getElementById("productosGrid");
    const productosCount = document.getElementById("productosCount");
    const loadingState = document.getElementById("loadingState");
    const modeloSelect = document.getElementById("modelo");
    
    // Ocultar estado de carga
    if (loadingState) {
      loadingState.remove();
    }
    
    // Actualizar contador
    if (productosCount) {
      productosCount.textContent = `${productos.length} productos`;
    }
    
    // Generar opciones de modelos
    const modelOptions = Array.from(
      new Set(productos.flatMap((p) => p.modelos_compatibles ?? []))
    ).sort((a, b) => a.localeCompare(b));
    
    if (modeloSelect) {
      modelOptions.forEach((modelo) => {
        const option = document.createElement("option");
        option.value = modelo;
        option.textContent = modelo;
        modeloSelect.appendChild(option);
      });
    }
    
    // Funci√≥n para renderizar una tarjeta de producto
    function renderProductCard(producto) {
      const modelos = producto.modelos_compatibles ?? [];
      const imagenes = producto.imagen
        ? Array.isArray(producto.imagen)
          ? producto.imagen
          : [producto.imagen]
        : ["/placeholder-producto.jpg"];
      const tieneImagen = imagenes.length > 0 && imagenes[0] !== "/placeholder-producto.jpg";
      const tieneMultiplesImagenes = imagenes.length > 1;
      
      const card = document.createElement("div");
      card.className = "producto-card";
      card.setAttribute("data-modelos", modelos.join(","));
      card.setAttribute("data-imagen", tieneImagen ? "true" : "false");
      
      card.innerHTML = `
        <div class="producto-imagen">
          <button
            class="producto-info-button"
            type="button"
            aria-label="M√°s informaci√≥n de ${producto.nombre}"
            data-producto-id="${producto.id}"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10" />
              <line x1="12" y1="16" x2="12" y2="12" />
              <line x1="12" y1="8" x2="12.01" y2="8" />
            </svg>
          </button>
          <div class="producto-imagen-container">
            ${imagenes.map((img, index) => `
              <img
                src="${img}"
                alt="${producto.nombre} - Imagen ${index + 1}"
                loading="lazy"
                class="${index === 0 ? "active" : ""}"
                data-image-index="${index}"
              />
            `).join("")}
          </div>
          ${tieneMultiplesImagenes ? `
            <button class="producto-imagen-nav producto-imagen-prev" type="button" aria-label="Imagen anterior" data-producto-id="${producto.id}">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 18l-6-6 6-6" />
              </svg>
            </button>
            <button class="producto-imagen-nav producto-imagen-next" type="button" aria-label="Imagen siguiente" data-producto-id="${producto.id}">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M9 18l6-6-6-6" />
              </svg>
            </button>
            <div class="producto-imagen-indicators">
              ${imagenes.map((_, index) => `
                <button class="producto-imagen-indicator ${index === 0 ? "active" : ""}" type="button" aria-label="Ver imagen ${index + 1}" data-image-index="${index}" data-producto-id="${producto.id}"></button>
              `).join("")}
            </div>
          ` : ""}
        </div>
        <div class="producto-info">
          <div class="producto-codigo">ID: ${producto.id}</div>
          <h4 class="producto-nombre">${producto.nombre}</h4>
          <p class="producto-descripcion">${producto.descripcion || ""}</p>
          ${modelos.length > 0 ? `
            <div class="producto-details">
              <span class="producto-maquina">
                Compatible: ${modelos.slice(0, 3).join(", ")}${modelos.length > 3 ? "‚Ä¶" : ""}
              </span>
            </div>
          ` : ""}
          <div class="producto-actions">
            <div class="cantidad-control" data-producto-id="${producto.id}">
              <button class="cantidad-btn" type="button" data-action="decremento" aria-label="Disminuir cantidad">&minus;</button>
              <input class="cantidad-input" type="number" min="1" step="1" value="1" inputmode="numeric" aria-label="Cantidad" />
              <button class="cantidad-btn" type="button" data-action="incremento" aria-label="Aumentar cantidad">+</button>
            </div>
            <button class="btn-agregar-carrito" type="button" data-producto-id="${producto.id}">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <circle cx="9" cy="21" r="1" />
                <circle cx="20" cy="21" r="1" />
                <path d="M1 1h4l2.68 13.39a2 2 0 001.95 1.61h9.72a2 2 0 001.95-1.61l1.75-9.78H6.5" />
              </svg>
              Agregar al carrito
            </button>
          </div>
        </div>
      `;
      
      return card;
    }
    
    // Renderizar todos los productos
    console.log('üé® [productos.astro] Iniciando renderizado de productos...');
    if (productosGrid) {
      productosGrid.innerHTML = "";
      console.log(`üñºÔ∏è [productos.astro] Renderizando ${productos.length} productos...`);
      
      productos.forEach((producto, index) => {
        console.log(`  üì¶ [productos.astro] Renderizando producto ${index + 1}/${productos.length}: ${producto.id}`);
        const card = renderProductCard(producto);
        productosGrid.appendChild(card);
      });
      
      console.log('‚úÖ [productos.astro] Renderizado completado');
      console.log(`üìä [productos.astro] Total de cards en el DOM: ${productosGrid.children.length}`);
    } else {
      console.error('‚ùå [productos.astro] No se encontr√≥ el elemento productosGrid');
    }

    /** @type {{ busqueda: HTMLInputElement | null; modelo: HTMLSelectElement | null; imagen: HTMLSelectElement | null; }} */
    const filtros = {
      busqueda: document.getElementById("busqueda"),
      modelo: document.getElementById("modelo"),
      imagen: document.getElementById("imagen"),
    };

    const btnFiltrar = document.getElementById("btnFiltrar");
    const btnLimpiar = document.getElementById("btnLimpiar");
    const imagenesProductos = Array.from(
      document.querySelectorAll(".producto-imagen-container img"),
    );

    const ajustarImagen = (img) => {
      if (!img || !img.complete || !img.naturalWidth || !img.naturalHeight)
        return;
      if (img.naturalWidth > img.naturalHeight) {
        img.classList.add("is-wide");
      }
    };

    imagenesProductos.forEach((img) => {
      if (img.complete) {
        ajustarImagen(img);
      } else {
        img.addEventListener("load", () => ajustarImagen(img));
      }
    });

    // Inicializar carrusel de im√°genes
    productosGrid?.querySelectorAll(".producto-imagen").forEach((container) => {
      const images = container.querySelectorAll(".producto-imagen-container img");
      const prevBtn = container.querySelector(".producto-imagen-prev");
      const nextBtn = container.querySelector(".producto-imagen-next");
      const indicators = container.querySelectorAll(".producto-imagen-indicator");
      
      if (images.length <= 1) return;

      let currentIndex = 0;

      const showImage = (index) => {
        images.forEach((img, i) => {
          img.classList.toggle("active", i === index);
        });
        indicators.forEach((indicator, i) => {
          indicator.classList.toggle("active", i === index);
        });
        currentIndex = index;
      };

      prevBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        const newIndex = currentIndex === 0 ? images.length - 1 : currentIndex - 1;
        showImage(newIndex);
      });

      nextBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        const newIndex = currentIndex === images.length - 1 ? 0 : currentIndex + 1;
        showImage(newIndex);
      });

      indicators.forEach((indicator, index) => {
        indicator.addEventListener("click", (e) => {
          e.stopPropagation();
          showImage(index);
        });
      });
    });

    // Inicializar controles de cantidad
    productosGrid?.querySelectorAll(".cantidad-control").forEach((control) => {
      const input = control.querySelector(".cantidad-input");
      const decrementar = control.querySelector('[data-action="decremento"]');
      const incrementar = control.querySelector('[data-action="incremento"]');

      const actualizarCantidad = (delta) => {
        if (!input) return;
        const actual = Number(input.value) || 1;
        const nuevo = Math.max(1, actual + delta);
        input.value = String(nuevo);
      };

      decrementar?.addEventListener("click", () => actualizarCantidad(-1));
      incrementar?.addEventListener("click", () => actualizarCantidad(1));

      input?.addEventListener("input", () => {
        const valor = Number(input.value) || 1;
        const cantidadNormalizada = Math.max(1, Math.floor(valor));
        input.value = String(cantidadNormalizada);
      });
    });

    // Inicializar botones de informaci√≥n
    productosGrid?.querySelectorAll(".producto-info-button").forEach((btn) => {
      btn.addEventListener("click", (e) => {
        e.preventDefault();
        e.stopPropagation();
        const id = btn.getAttribute("data-producto-id");
        if (!id) return;
        const producto = productos.find((item) => item.id === id);
        if (!producto) return;
        
        // Esperar a que el modal est√© disponible si es necesario
        if (window.abrirModalProducto) {
          window.abrirModalProducto(producto);
        } else {
          // Esperar un poco y reintentar
          setTimeout(() => {
            if (window.abrirModalProducto) {
              window.abrirModalProducto(producto);
            }
          }, 200);
        }
      });
    });

    // Inicializar botones de agregar al carrito
    productosGrid?.querySelectorAll(".btn-agregar-carrito").forEach((btn) => {
      btn.addEventListener("click", () => {
        const id = btn.getAttribute("data-producto-id");
        const producto = productos.find((item) => item.id === id);
        if (!producto) return;

        const card = btn.closest(".producto-card");
        const cantidadInput = card?.querySelector(".cantidad-input");
        const cantidad = Math.max(1, Math.floor(Number(cantidadInput?.value) || 1));

        const ejecutarAgregado = (manager) => {
          manager?.addItem(
            {
              id: producto.id,
              nombre: producto.nombre ?? "Producto sin nombre",
              imagen: producto.imagen ?? null,
            },
            cantidad,
          );
        };

        const cartManager = window.cartManager;
        if (cartManager) {
          ejecutarAgregado(cartManager);
        } else {
          document.addEventListener(
            "cart-ready",
            () => {
              ejecutarAgregado(window.cartManager ?? null);
            },
            { once: true },
          );
        }
      });
    });

    const filtrar = () => {
      if (!productosGrid || !productosCount) return;

      const termino = (filtros.busqueda?.value || "").trim().toLowerCase();
      const modelo = (filtros.modelo?.value || "").trim().toLowerCase();
      const imagenFiltro = filtros.imagen?.value || "";

      const cards = /** @type {HTMLElement[]} */ (
        Array.from(productosGrid.children)
      );
      let visibles = 0;

      cards.forEach((card) => {
        const nombre =
          card.querySelector(".producto-nombre")?.textContent?.toLowerCase() ||
          "";
        const codigo =
          card.querySelector(".producto-codigo")?.textContent?.toLowerCase() ||
          "";
        const descripcion =
          card
            .querySelector(".producto-descripcion")
            ?.textContent?.toLowerCase() || "";
        const modelos = (card.dataset.modelos || "")
          .split(",")
          .map((m) => m.trim().toLowerCase())
          .filter(Boolean);
        const tieneImagen = card.dataset.imagen === "true";

        const coincideBusqueda =
          !termino ||
          nombre.includes(termino) ||
          codigo.includes(termino) ||
          descripcion.includes(termino);
        const coincideModelo = !modelo || modelos.includes(modelo);
        const coincideImagen =
          !imagenFiltro ||
          (imagenFiltro === "true" && tieneImagen) ||
          (imagenFiltro === "false" && !tieneImagen);

        if (
          coincideBusqueda &&
          coincideModelo &&
          coincideImagen
        ) {
          card.style.display = "block";
          visibles += 1;
        } else {
          card.style.display = "none";
        }
      });

      productosCount.textContent = `${visibles} productos`;
    };

    const limpiar = () => {
      Object.values(filtros).forEach((filtro) => {
        if (!filtro) return;
        if ("value" in filtro) filtro.value = "";
        if ("selectedIndex" in filtro) filtro.selectedIndex = 0;
      });
      filtrar();
    };

    btnFiltrar?.addEventListener("click", filtrar);
    btnLimpiar?.addEventListener("click", limpiar);
    filtros.busqueda?.addEventListener("input", filtrar);
    filtros.modelo?.addEventListener("change", filtrar);
    filtros.imagen?.addEventListener("change", filtrar);

    filtrar();
  });
</script>
