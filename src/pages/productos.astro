---
import Layout from '../layouts/Layout.astro';   
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-productos">
    <div class="hero-overlay-productos"></div>
    <div class="hero-content-productos">
      <div class="hero-badge-productos">Nuestros Productos</div>
      <h1 class="hero-title-productos">
        Componentes <span class="highlight-productos">Hidráulicos</span> de Calidad
      </h1>
      <p class="hero-subtitle-productos">
        Encuentra la pieza perfecta para tu maquinaria. Repuestos originales y compatibles para todas las marcas
      </p>
    </div>
  </section>

  <!-- Filtros y Búsqueda -->
  <section class="filtros-section">
    <div class="container-productos">
      <div class="filtros-header">
        <h2>Buscar Productos</h2>
        <p>Filtra por categoría, marca o tipo de máquina</p>
      </div>
      
      <div class="filtros-grid">
        <!-- Búsqueda -->
        <div class="filtro-group">
          <label for="busqueda">Buscar</label>
          <div class="search-input">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
            </svg>
            <input type="text" id="busqueda" placeholder="Buscar por código o descripción...">
          </div>
        </div>

        <!-- Categoría -->
        <div class="filtro-group">
          <label for="categoria">Categoría</label>
          <select id="categoria">
            <option value="">Todas las categorías</option>
            <option value="bombas">Bombas Hidráulicas</option>
            <option value="motores">Motores Hidráulicos</option>
            <option value="valvulas">Válvulas Hidráulicas</option>
            <option value="cilindros">Cilindros Hidráulicos</option>
            <option value="filtros">Filtros y Accesorios</option>
            <option value="mangueras">Mangueras y Conexiones</option>
          </select>
        </div>

        <!-- Marca -->
        <div class="filtro-group">
          <label for="marca">Marca</label>
          <select id="marca">
            <option value="">Todas las marcas</option>
            <option value="case">Case</option>
            <option value="caterpillar">Caterpillar</option>
            <option value="john-deere">John Deere</option>
            <option value="komatsu">Komatsu</option>
            <option value="volvo">Volvo</option>
            <option value="new-holland">New Holland</option>
            <option value="bobcat">Bobcat</option>
            <option value="jcb">JCB</option>
          </select>
        </div>

        <!-- Máquina -->
        <div class="filtro-group">
          <label for="maquina">Tipo de Máquina</label>
          <select id="maquina">
            <option value="">Todas las máquinas</option>
            <option value="retroexcavadora">Retroexcavadora</option>
            <option value="cargadora">Cargadora</option>
            <option value="excavadora">Excavadora</option>
            <option value="bulldozer">Bulldozer</option>
            <option value="tractor">Tractor</option>
            <option value="montacargas">Montacargas</option>
            <option value="compactadora">Compactadora</option>
          </select>
        </div>
      </div>

      <div class="filtros-actions">
        <button class="btn-filtrar" id="btnFiltrar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polygon points="22,3 2,3 10,12.46 10,19 14,21 14,12.46 22,3"/>
          </svg>
          Filtrar Productos
        </button>
        <button class="btn-limpiar" id="btnLimpiar">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 6h18M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
          </svg>
          Limpiar Filtros
        </button>
      </div>
    </div>
  </section>

  <!-- Resultados -->
  <section class="resultados-section">
    <div class="container-productos">
      <div class="resultados-header">
        <div class="resultados-info">
          <h3>Productos Encontrados</h3>
          <span class="productos-count" id="productosCount">12 productos</span>
        </div>
        <div class="ordenar">
          <label for="ordenar">Ordenar por:</label>
          <select id="ordenar">
            <option value="nombre">Nombre</option>
            <option value="codigo">Código</option>
            <option value="marca">Marca</option>
            <option value="precio">Precio</option>
