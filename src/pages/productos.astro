<style>
  /* Hero Productos */
  .hero-productos {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-tertiary) 0%, var(--color-tertiary-light) 100%);
    overflow: hidden;
  }

  .hero-productos::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(225, 51, 44, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(225, 51, 44, 0.1) 0%, transparent 50%);
    animation: pulse-bg-productos 8s ease-in-out infinite;
  }

  @keyframes pulse-bg-productos {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  .hero-overlay-productos {
    position: absolute;
    inset: 0;
    background-image: 
      repeating-linear-gradient(45deg, transparent, transparent 30px, rgba(241, 236, 232, 0.02) 30px, rgba(241, 236, 232, 0.02) 60px);
  }

  .hero-content-productos {
    position: relative;
    text-align: center;
    z-index: 10;
    max-width: 900px;
    padding: 2rem;
    animation: fadeInUp 1s ease-out;
  }

  .hero-badge-productos {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: rgba(225, 51, 44, 0.2);
    border: 1px solid var(--color-secondary);
    color: var(--color-secondary);
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .hero-title-productos {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 900;
    color: var(--color-primary);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .highlight-productos {
    color: var(--color-secondary);
    position: relative;
  }

  .hero-subtitle-productos {
    font-size: clamp(1rem, 2vw, 1.3rem);
    color: rgba(241, 236, 232, 0.85);
    margin-bottom: 0;
  }

  /* Container */
  .container-productos {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Filtros */
  .filtros-section {
    padding: 4rem 0;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .filtros-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .filtros-header h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-tertiary);
    margin-bottom: 1rem;
  }

  .filtros-header p {
    font-size: 1.1rem;
    color: var(--color-gray-600);
  }

  .filtros-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .filtro-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filtro-group label {
    font-weight: 600;
    color: var(--color-tertiary);
    font-size: 0.95rem;
  }

  .filtro-group select {
    padding: 1rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
    background: var(--color-white);
  }

  .filtro-group select:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
  }

  .search-input {
    position: relative;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    color: var(--color-gray-400);
  }

  .search-input input {
    width: 100%;
    padding: 1rem 1rem 1rem 3rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .search-input input:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
  }

  .filtros-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn-filtrar,
  .btn-limpiar {
    padding: 1rem 2rem;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-filtrar {
    background: var(--color-secondary);
    color: var(--color-white);
    box-shadow: 0 5px 15px rgba(225, 51, 44, 0.3);
  }

  .btn-filtrar:hover {
    background: var(--color-secondary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(225, 51, 44, 0.4);
  }

  .btn-limpiar {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
    border: 2px solid var(--color-gray-300);
  }

  .btn-limpiar:hover {
    background: var(--color-gray-200);
    transform: translateY(-2px);
  }

  /* Resultados */
  .resultados-section {
    padding: 4rem 0;
    background: var(--color-gray-50);
  }

  .resultados-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .resultados-info h3 {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-tertiary);
    margin-bottom: 0.5rem;
  }

  .productos-count {
    color: var(--color-gray-600);
    font-size: 1rem;
  }

  .ordenar {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .ordenar label {
    font-weight: 600;
    color: var(--color-tertiary);
  }

  .ordenar select {
    padding: 0.8rem 1rem;
    border: 2px solid var(--color-gray-200);
    border-radius: 8px;
    font-size: 0.95rem;
    background: var(--color-white);
  }

  /* Grid de Productos */
  .productos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .producto-card {
    background: var(--color-white);
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px var(--color-overlay-light);
    transition: all 0.3s ease;
    border: 1px solid var(--color-gray-100);
  }

