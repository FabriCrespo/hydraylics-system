<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: url('/hero.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(61, 53, 50, 0.65) 0%, rgba(61, 53, 50, 0.5) 100%);
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .hero-content {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 2;
  }

  .hero-text {
    animation: none;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
    background: linear-gradient(
      90deg,
      var(--color-primary) 0%,
      var(--color-primary) 40%,
      var(--color-secondary) 50%,
      var(--color-primary) 60%,
      var(--color-primary) 100%
    );
    background-size: 200% 100%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: textScan 8s ease-in-out infinite;
  }

  @keyframes textScan {
    0% { background-position: 200% 0; }
    50% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: rgba(241, 236, 232, 0.9);
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.9rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
  }

  .btn-primary {
    background-color: var(--color-secondary);
    color: white;
    box-shadow: 0 4px 15px rgba(225, 51, 44, 0.3);
  }

  .btn-primary:hover {
    background-color: var(--color-secondary-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(225, 51, 44, 0.4);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }

  .btn-secondary:hover {
    background-color: var(--color-primary);
    color: var(--color-tertiary);
    transform: translateY(-2px);
  }


  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
  }

  .scroll-indicator span {
    display: block;
    width: 30px;
    height: 50px;
    border: 2px solid var(--color-primary);
    border-radius: 50px;
    position: relative;
  }

  .scroll-indicator span::before {
    content: '';
    position: absolute;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    width: 6px;
    height: 6px;
    background-color: var(--color-secondary);
    border-radius: 50%;
    animation: scroll 2s infinite;
  }

  @keyframes scroll {
    0% {
      opacity: 1;
      top: 10px;
    }
    100% {
      opacity: 0;
      top: 30px;
    }
  }

  /* Container */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  /* Animaciones para headers de sección */
  .section-label {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .section-label.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .section-title {
    opacity: 0;
    transform: translateY(40px);
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .section-title.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .section-description {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .section-description.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .section-label {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background-color: rgba(225, 51, 44, 0.1);
    color: var(--color-secondary);
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: var(--color-tertiary);
    margin-bottom: 1rem;
  }

  .section-description {
    font-size: 1.1rem;
    color: rgba(61, 53, 50, 0.7);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Services Section */
  .services {
    padding: 6rem 0;
    background-color: var(--color-primary);
    position: relative;
    overflow: hidden;
  }

  .services::before {
    content: '';
    position: absolute;
    top: 0;
