---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Especialistas en Sistemas Hidráulicos para Maquinaria Pesada
        </h1>
        <p class="hero-subtitle">
          Importación de repuestos hidráulicos y reparación especializada en tractores, cosechadoras 
          y todo tipo de equipo pesado. Más de 10 años de experiencia respaldándonos.
        </p>
        <div class="hero-buttons">
          <a href="#contacto" class="btn btn-primary">Solicitar Cotización</a>
          <a href="#servicios" class="btn btn-secondary">Nuestros Servicios</a>
        </div>
      </div>

    </div>
    <div class="scroll-indicator">
      <span></span>
    </div>
  </section>

  <!-- Servicios Principales -->
  <section id="servicios" class="services">
    <div class="container">
      <div class="section-header">
        <span class="section-label">Lo Que Hacemos</span>
