<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 1rem;
    backdrop-filter: blur(4px);
  }

  .modal-content {
    background: var(--color-white);
    border-radius: 12px;
    width: 100%;
    max-width: 600px;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: modalSlideIn 0.3s ease-out;
  }

  @keyframes modalSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    border-bottom: 2px solid var(--color-gray-200);
  }

  .modal-header h2 {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--color-tertiary);
    margin: 0;
  }

  .modal-close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    color: var(--color-gray-600);
    transition: all 0.2s ease;
  }

  .modal-close:hover {
    background: var(--color-gray-100);
    color: var(--color-tertiary);
  }

  .product-form {
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .form-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.5rem;
    background: #f9fafb;
    border-radius: 12px;
    border: 2px solid #e5e7eb;
  }

  .section-header {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-bottom: 0.5rem;
  }

  .section-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-secondary, #e1332c);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 800;
    flex-shrink: 0;
  }

  .section-header h3 {
    margin: 0 0 0.25rem 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-tertiary, #1a1a1a);
  }

  .section-header p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-gray-600, #666);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .label-with-icon {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 700;
    color: var(--color-tertiary, #1a1a1a);
    font-size: 1rem;
  }

  .label-with-icon svg {
    color: var(--color-secondary, #e1332c);
    flex-shrink: 0;
  }

  .required-badge {
    color: var(--color-secondary, #e1332c);
    font-size: 1.2rem;
    margin-left: 0.25rem;
  }

  .form-input,
  .form-textarea {
    padding: 1rem 1.25rem;
    border: 2px solid #d1d5db;
    border-radius: 10px;
    font-size: 1rem;
    font-family: inherit;
    transition: all 0.3s ease;
