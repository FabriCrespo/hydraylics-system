    width: 100%;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--color-secondary, #e1332c);
    box-shadow: 0 0 0 4px rgba(225, 51, 44, 0.1);
    background: #fff;
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
    line-height: 1.6;
  }

  .help-text {
    font-size: 0.875rem;
    color: #6b7280;
    line-height: 1.5;
    padding: 0.75rem 1rem;
    background: white;
    border-radius: 8px;
    border-left: 3px solid #3b82f6;
  }

  .help-text code {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.85em;
    color: #1f2937;
  }

  .upload-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .file-input {
    display: none;
  }

  .file-label-large {
    display: block;
    padding: 2.5rem 2rem;
    border: 3px dashed #cbd5e1;
    border-radius: 12px;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .file-label-large::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.5s;
  }

  .file-label-large:hover {
    border-color: var(--color-secondary, #e1332c);
    background: linear-gradient(135deg, #fff5f5 0%, #fee2e2 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(225, 51, 44, 0.15);
  }

  .file-label-large:hover::before {
    left: 100%;
  }

  .file-label-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    text-align: left;
  }

  .file-label-content svg {
    color: var(--color-secondary, #e1332c);
    flex-shrink: 0;
  }

  .file-label-content strong {
    display: block;
    font-size: 1.1rem;
    color: var(--color-tertiary, #1a1a1a);
    margin-bottom: 0.25rem;
  }

  .file-label-content p {
    margin: 0;
    font-size: 0.9rem;
    color: #6b7280;
  }

  .uploaded-images {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 1.5rem;
    padding: 1rem;
    background: white;
    border-radius: 10px;
    border: 2px dashed #e5e7eb;
    min-height: 100px;
  }

  .uploaded-images:empty::before {
    content: '游닝 Las im치genes que selecciones aparecer치n aqu칤';
    display: block;
    width: 100%;
    text-align: center;
    color: #9ca3af;
    font-size: 0.9rem;
    padding: 2rem 0;
  }

  .uploaded-image-item {
    position: relative;
    width: 100px;
    height: 100px;
    border-radius: 10px;
    overflow: hidden;
    border: 3px solid #e5e7eb;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .uploaded-image-item:hover {
    border-color: var(--color-secondary, #e1332c);
    transform: scale(1.05);
    box-shadow: 0 4px 12px rgba(225, 51, 44, 0.2);
  }

  .uploaded-image-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .uploaded-image-item .remove-image {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: rgba(220, 38, 38, 0.95);
    color: white;
    border: 2px solid white;
    border-radius: 50%;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 16px;
    font-weight: bold;
    transition: all 0.2s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .uploaded-image-item .remove-image:hover {
    background: #dc2626;
    transform: scale(1.15) rotate(90deg);
    box-shadow: 0 4px 12px rgba(220, 38, 38, 0.4);
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    padding-top: 2rem;
    border-top: 2px solid #e5e7eb;
  }

  .btn-save,
  .btn-cancel {
    padding: 1rem 2rem;
    border: none;
    border-radius: 10px;
    font-size: 1.05rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    flex: 1;
  }

  .btn-save {
    background: linear-gradient(135deg, var(--color-secondary, #e1332c) 0%, #c02a24 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(225, 51, 44, 0.3);
  }

  .btn-save:hover {
    background: linear-gradient(135deg, #c02a24 0%, #a0221f 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(225, 51, 44, 0.4);
  }

  .btn-save:active {
    transform: translateY(0);
  }

  .btn-cancel {
    background: white;
    color: #6b7280;
    border: 2px solid #d1d5db;
  }

  .btn-cancel:hover {
    background: #f9fafb;
    border-color: #9ca3af;
    color: #374151;
  }

  .btn-save svg,
  .btn-cancel svg {
    flex-shrink: 0;
  }

  .message {
    padding: 1rem;
    border-radius: 8px;
    margin: 0 2rem 1.5rem 2rem;
    font-weight: 600;
  }

  .message.success {
    background: #d1fae5;
    color: #065f46;
    border: 2px solid #10b981;
  }

  .message.error {
    background: #fee2e2;
    color: #991b1b;
    border: 2px solid #ef4444;
  }

  @media (max-width: 640px) {
    .modal-content {
      max-width: 100%;
      max-height: 100vh;
      border-radius: 0;
    }

    .modal-header {
      padding: 1rem 1.5rem;
    }

    .modal-header h2 {
      font-size: 1.5rem;
    }

    .product-form {
      padding: 1.5rem;
      gap: 2rem;
    }

    .form-section {
      padding: 1.25rem;
    }

    .section-header {
      flex-direction: column;
      gap: 0.75rem;
    }

    .section-number {
      width: 36px;
      height: 36px;
      font-size: 1.1rem;
    }

    .file-label-large {
      padding: 2rem 1.5rem;
    }

    .file-label-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .form-actions {
      flex-direction: column;
      gap: 0.75rem;
    }

    .btn-save,
    .btn-cancel {
      width: 100%;
      padding: 1rem;
    }
  }
</style>

<script>
  // Declarar tipos globales
  declare global {
    interface Window {
      openAddProductModal?: () => void;
      closeAddProductModal?: () => void;
    }
  }

  // Cargar el servicio de productos din치micamente
  let productService: any = null;
  
  async function getProductService() {
    if (!productService) {
      const module = await import('../../utils/productService');
      productService = module.productService;
    }
    return productService;
  }

  let addUploadedImages: string[] = [];
  let addPendingFiles: { file: File; previewId: string; imageItem: HTMLElement }[] = [];

  // Agregar preview de imagen
  const addImagePreview = (imagePath: string) => {
    const container = document.getElementById("addUploadedImages") as HTMLElement;
    if (!container) return;

    const imageItem = document.createElement("div");
    imageItem.className = "uploaded-image-item";
    imageItem.dataset.path = imagePath;

    const img = document.createElement("img");
    img.src = imagePath.startsWith("data:") ? imagePath : imagePath;
    img.alt = "Imagen subida";

    const removeBtn = document.createElement("button");
    removeBtn.className = "remove-image";
    removeBtn.textContent = "칑";
    removeBtn.type = "button";
    removeBtn.addEventListener("click", () => {
      addUploadedImages = addUploadedImages.filter((path) => path !== imagePath);
      const imagenHidden = document.getElementById("addImagen") as HTMLInputElement;
      if (imagenHidden) {
        imagenHidden.value = addUploadedImages.join(", ");
      }
      imageItem.remove();
      if (addUploadedImages.length === 0) {
        imagenHidden?.removeAttribute("required");
      }
    });

    imageItem.appendChild(img);
    imageItem.appendChild(removeBtn);
    container.appendChild(imageItem);
  };

  const showMessage = (message: string, type: "success" | "error") => {
    const existingMessage = document.querySelector("#addProductModal .message");
    if (existingMessage) {
      existingMessage.remove();
    }

    const messageDiv = document.createElement("div");
    messageDiv.className = `message ${type}`;
    messageDiv.textContent = message;

    const modalContent = document.querySelector("#addProductModal .modal-content");
    if (modalContent) {
      const form = modalContent.querySelector(".product-form");
      if (form) {
        modalContent.insertBefore(messageDiv, form);
      }
    }

    setTimeout(() => {
      messageDiv.remove();
    }, 5000);
  };

  window.openAddProductModal = () => {
    const modal = document.getElementById("addProductModal") as HTMLElement;
    if (!modal) return;

    // Limpiar formulario
    addUploadedImages = [];
    addPendingFiles = [];
    const form = document.getElementById("addProductForm") as HTMLFormElement;
    form?.reset();
    
    const container = document.getElementById("addUploadedImages") as HTMLElement;
    if (container) {
      container.innerHTML = "";
    }

    modal.style.display = "flex";
    document.body.style.overflow = "hidden";
  };

  window.closeAddProductModal = () => {
    const modal = document.getElementById("addProductModal") as HTMLElement;
    if (modal) {
      modal.style.display = "none";
      document.body.style.overflow = "";
    }
  };

  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("addProductModal") as HTMLElement;
    const form = document.getElementById("addProductForm") as HTMLFormElement;
    const closeBtn = document.getElementById("addModalClose") as HTMLButtonElement;
    const cancelBtn = document.getElementById("addModalCancel") as HTMLButtonElement;
    const imagenInput = document.getElementById("addImagenInput") as HTMLInputElement;
    const container = document.getElementById("addUploadedImages") as HTMLElement;

    // Funci칩n para convertir im치genes a data URLs
    const uploadPendingImages = async (): Promise<string[]> => {
      const uploadedPaths: string[] = [];
      
      for (const { file, imageItem } of addPendingFiles) {
        try {
          const reader = new FileReader();
          const dataUrl = await new Promise<string>((resolve, reject) => {
            reader.onload = (e) => resolve(e.target?.result as string);
            reader.onerror = reject;
            reader.readAsDataURL(file);
          });
          
          uploadedPaths.push(dataUrl);
          imageItem.remove();
          addImagePreview(dataUrl);
        } catch (error: any) {
          throw new Error(`Error al procesar la imagen: ${error.message}`);
        }
      }

      return uploadedPaths;
    };

    // Manejar selecci칩n de im치genes
    imagenInput?.addEventListener("change", (e) => {
      const files = (e.target as HTMLInputElement).files;
      if (!files || files.length === 0) return;

      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        const previewId = `temp-add-${Date.now()}-${i}`;
        
        const reader = new FileReader();
        reader.onload = (e) => {
          const tempImageItem = document.createElement("div");
          tempImageItem.className = "uploaded-image-item";
          tempImageItem.id = previewId;
          tempImageItem.dataset.temp = "true";

          const img = document.createElement("img");
          img.src = e.target?.result as string;
          img.alt = "Pendiente";

          const removeBtn = document.createElement("button");
          removeBtn.className = "remove-image";
          removeBtn.textContent = "칑";
          removeBtn.type = "button";
          removeBtn.addEventListener("click", () => {
            addPendingFiles = addPendingFiles.filter((item) => item.previewId !== previewId);
            tempImageItem.remove();
          });

          tempImageItem.appendChild(img);
          tempImageItem.appendChild(removeBtn);
          if (container) {
            container.appendChild(tempImageItem);
          }

          addPendingFiles.push({ file, previewId, imageItem: tempImageItem });
        };
        reader.readAsDataURL(file);
      }

      imagenInput.value = "";
    });

    // Cerrar modal
    modal?.addEventListener("click", (e) => {
      if (e.target === modal) {
        window.closeAddProductModal?.();
      }
    });

    closeBtn?.addEventListener("click", () => {
      window.closeAddProductModal?.();
    });

    cancelBtn?.addEventListener("click", () => {
      window.closeAddProductModal?.();
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && modal?.style.display === "flex") {
        window.closeAddProductModal?.();
      }
    });

    // Manejar env칤o del formulario
    form?.addEventListener("submit", async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const nombre = formData.get("nombre") as string;
      const descripcion = formData.get("descripcion") as string;
      const modelosStr = formData.get("modelos") as string;

      const modelos_compatibles = modelosStr
        .split(",")
        .map((m) => m.trim())
        .filter(Boolean);

      try {
        // Convertir im치genes pendientes
        if (addPendingFiles.length > 0) {
          showMessage("Procesando im치genes...", "success");
          const newUploadedPaths = await uploadPendingImages();
          addUploadedImages = [...addUploadedImages, ...newUploadedPaths];
          addPendingFiles = [];
        }

        let imagen: string | string[] = [];
        if (addUploadedImages.length > 0) {
          imagen = addUploadedImages.length === 1
            ? addUploadedImages[0]
            : addUploadedImages;
        }

        if (!imagen || (Array.isArray(imagen) && imagen.length === 0)) {
          showMessage("Debes agregar al menos una imagen", "error");
          return;
        }

        const productData = {
          nombre,
          descripcion,
          modelos_compatibles,
          imagen,
        };

        const service = await getProductService();
        const created = await service.create(productData);

        if (created) {
          showMessage("Producto creado correctamente", "success");
          
          // Emitir evento para actualizar la p치gina de admin
          window.dispatchEvent(new CustomEvent('product-created'));
          
          setTimeout(() => {
            window.closeAddProductModal?.();
            // Recargar la p치gina para mostrar los cambios
            if (window.location.pathname.includes('/admin')) {
              window.location.reload();
            } else {
              window.location.reload();
            }
          }, 1500);
        } else {
          showMessage("Error al crear el producto", "error");
        }
      } catch (error: any) {
        showMessage(error.message || "Error al crear el producto", "error");
      }
    });
  });
</script>

