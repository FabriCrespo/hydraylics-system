---
interface Props {
  products: Array<{
    id: string;
    nombre: string;
    descripcion?: string;
    imagen?: string | string[];
    modelos_compatibles?: string[];
  }>;
  phoneNumber?: string;
}

const { products, phoneNumber = "59170405030" } = Astro.props;
---

<div class="modal-detalle" id="detalleModal" aria-hidden="true">
  <div class="modal-overlay" id="modalOverlay"></div>
  <div
    class="modal-container"
    role="dialog"
    aria-modal="true"
    aria-labelledby="modalTitulo"
  >
    <button
      class="modal-close"
      id="modalCerrar"
      aria-label="Cerrar detalle de producto"
    >
      <span>&times;</span>
    </button>
    <div class="modal-content">
      <div class="modal-image" id="modalImagenWrapper">
        <img id="modalImagen" src="" alt="" />
      </div>
      <div class="modal-info">
        <div class="modal-header">
          <span class="modal-badge">Detalle de producto</span>
          <h3 id="modalTitulo"></h3>
          <p class="modal-codigo" id="modalCodigo"></p>
        </div>
        <div class="modal-body">
          <p class="modal-descripcion" id="modalDescripcion"></p>
          <div class="modal-section" style="display: none;">
            <h4>Compatibilidad</h4>
            <div class="modal-tags" id="modalCompatibilidad"></div>
          </div>
        </div>
        <div class="modal-actions">
          <button class="btn-cotizar" id="modalCotizar"
            >Solicitar cotización</button
          >
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Modal Detalle */
  .modal-detalle {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 9999;
  }

  .modal-detalle.is-active {
    opacity: 1;
    pointer-events: auto;
  }

  .modal-overlay {
    position: absolute;
    inset: 0;
    background: rgba(24, 20, 18, 0.6);
    backdrop-filter: blur(3px);
  }

  .modal-container {
    position: relative;
    background: var(--color-white);
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(34, 30, 28, 0.2);
    max-width: 650px;
    width: min(650px, 92vw);
    max-height: 85vh;
    overflow-y: auto;
    overflow-x: hidden;
    z-index: 1;
    transform: translateY(20px);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE y Edge */
  }

  .modal-container::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
    width: 0;
    height: 0;
  }

  .modal-detalle.is-active .modal-container {
    transform: translateY(0);
  }

  .modal-close {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    border: none;
    background: rgba(24, 20, 18, 0.06);
    color: var(--color-tertiary);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    cursor: pointer;
    transition:
      background 0.3s ease,
      transform 0.3s ease;
    z-index: 10;
  }

  .modal-close:hover {
    background: rgba(225, 51, 44, 0.15);
    transform: rotate(90deg);
  }

  .modal-content {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 1rem;
    padding: 1.25rem;
    min-height: 0;
  }

  .modal-image {
    background: var(--color-gray-50);
    border-radius: 8px;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    position: sticky;
    top: 1.25rem;
    align-self: start;
    max-height: calc(85vh - 3rem);
    overflow: hidden;
  }

  .modal-image img {
    width: 100%;
    max-height: 320px;
    height: auto;
    object-fit: contain;
    border-radius: 6px;
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
  }

  .modal-info {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    color: var(--color-tertiary);
    min-width: 0;
    overflow: hidden;
    height: 100%;
  }

  .modal-header {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    flex-shrink: 0;
  }

  .modal-badge {
    align-self: flex-start;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    background: rgba(225, 51, 44, 0.1);
    color: var(--color-secondary);
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .modal-info h3 {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    margin: 0;
    font-weight: 700;
    line-height: 1.3;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .modal-body {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
    min-height: 0;
    overflow-y: auto;
  }

  .modal-body::-webkit-scrollbar {
    width: 6px;
  }

  .modal-body::-webkit-scrollbar-track {
    background: transparent;
  }

  .modal-body::-webkit-scrollbar-thumb {
    background: var(--color-gray-300);
    border-radius: 3px;
  }

  .modal-body::-webkit-scrollbar-thumb:hover {
    background: var(--color-gray-400);
  }

  .modal-codigo {
    font-weight: 500;
    color: var(--color-gray-500);
    font-size: 0.85rem;
  }

  .modal-descripcion {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--color-gray-600);
    margin: 0;
    word-wrap: break-word;
    overflow-wrap: break-word;
    max-height: none;
    overflow: visible;
  }

  .modal-section {
    margin-top: 0.5rem;
  }

  .modal-section h4 {
    margin: 0 0 0.75rem;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-gray-500);
    font-weight: 600;
  }

  .modal-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .modal-tag {
    padding: 0.3rem 0.7rem;
    background: var(--color-gray-100);
    color: var(--color-tertiary);
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid var(--color-gray-200);
  }

  .modal-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.75rem;
    position: sticky;
    bottom: 0;
    background: var(--color-white);
    padding-top: 0.75rem;
    z-index: 5;
  }

  .modal-actions .btn-cotizar {
    width: 100%;
    padding: 0.65rem 0.9rem;
    font-size: 0.875rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    background: var(--color-secondary);
    color: var(--color-white);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .modal-actions .btn-cotizar:hover {
    background: var(--color-secondary-dark);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(225, 51, 44, 0.25);
  }

  @media (max-width: 968px) {
    .modal-container {
      max-width: 95vw;
      width: 95vw;
      max-height: 90vh;
    }

    .modal-content {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1.25rem;
    }

    .modal-image {
      position: relative;
      top: 0;
      max-height: none;
      padding: 0.5rem;
    }

    .modal-image img {
      max-height: 300px;
      aspect-ratio: 4 / 3;
    }

    .modal-body {
      overflow-y: visible;
      gap: 0.5rem;
    }
  }

  @media (max-width: 768px) {
    .modal-container {
      max-width: 95vw;
      max-height: 90vh;
      border-radius: 10px;
    }

    .modal-content {
      grid-template-columns: 1fr;
      padding: 1.125rem;
      gap: 0.875rem;
    }

    .modal-image {
      padding: 0.5rem;
      max-width: 100%;
      position: relative;
      top: 0;
    }

    .modal-image img {
      aspect-ratio: 4 / 3;
      max-height: 280px;
    }

    .modal-info {
      gap: 0.625rem;
    }

    .modal-info h3 {
      font-size: 1.1rem;
    }

    .modal-descripcion {
      font-size: 0.85rem;
      line-height: 1.5;
    }

    .modal-body {
      overflow-y: visible;
      gap: 0.5rem;
    }

    .modal-actions {
      position: relative;
      padding-top: 0.5rem;
      margin-top: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .modal-container {
      width: 95vw;
      max-height: 90vh;
      border-radius: 10px;
    }

    .modal-content {
      padding: 1rem;
      gap: 0.75rem;
    }

    .modal-close {
      top: 0.5rem;
      right: 0.5rem;
      width: 28px;
      height: 28px;
      font-size: 1.1rem;
    }

    .modal-image {
      padding: 0.4rem;
    }

    .modal-image img {
      max-height: 240px;
    }

    .modal-info {
      gap: 0.625rem;
    }

    .modal-info h3 {
      font-size: 1rem;
      line-height: 1.25;
    }

    .modal-codigo {
      font-size: 0.75rem;
    }

    .modal-descripcion {
      font-size: 0.8rem;
      line-height: 1.5;
    }

    .modal-section {
      margin-top: 0.25rem;
    }

    .modal-section h4 {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }

    .modal-tag {
      padding: 0.25rem 0.6rem;
      font-size: 0.7rem;
    }

    .modal-actions {
      margin-top: 0.5rem;
    }

    .modal-actions .btn-cotizar {
      padding: 0.6rem 0.85rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 360px) {
    .modal-content {
      padding: 0.875rem;
      gap: 0.625rem;
    }

    .modal-image img {
      max-height: 200px;
    }

    .modal-info h3 {
      font-size: 0.95rem;
    }

    .modal-descripcion {
      font-size: 0.75rem;
      line-height: 1.4;
    }

    .modal-actions .btn-cotizar {
      padding: 0.55rem 0.75rem;
      font-size: 0.75rem;
    }
  }
</style>

<script define:vars={{ products, phoneNumber }}>
  // @ts-nocheck
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("detalleModal");
    const modalOverlay = document.getElementById("modalOverlay");
    const modalCerrar = document.getElementById("modalCerrar");
    const modalTitulo = document.getElementById("modalTitulo");
    const modalCodigo = document.getElementById("modalCodigo");
    const modalDescripcion = document.getElementById("modalDescripcion");
    const modalCompatibilidad = document.getElementById("modalCompatibilidad");
    const modalImagen = document.getElementById("modalImagen");
    const modalCotizar = document.getElementById("modalCotizar");

    let productoActual = null;
    let cartManager = window.cartManager ?? null;

    if (!cartManager) {
      document.addEventListener(
        "cart-ready",
        () => {
          cartManager = window.cartManager ?? null;
        },
        { once: true },
      );
    }

    const abrirModal = (producto) => {
      if (!modal) return;
      productoActual = producto;

      if (modalTitulo)
        modalTitulo.textContent = producto.nombre ?? "Producto sin nombre";
      if (modalCodigo) modalCodigo.textContent = `ID: ${producto.id}`;
      if (modalDescripcion)
        modalDescripcion.textContent =
          producto.descripcion ?? "Sin descripción disponible.";

      if (modalImagen) {
        const imagenSrc = Array.isArray(producto.imagen)
          ? producto.imagen[0]
          : producto.imagen;
        modalImagen.src = imagenSrc ?? "/placeholder-producto.jpg";
        modalImagen.alt = producto.nombre ?? "Producto hidráulico";
      }

      if (modalCompatibilidad) {
        modalCompatibilidad.innerHTML = "";
        const modelos = producto.modelos_compatibles ?? [];
        if (modelos.length === 0) {
          const span = document.createElement("span");
          span.className = "modal-tag";
          span.textContent = "Sin referencias registradas";
          modalCompatibilidad.appendChild(span);
        } else {
          modelos.slice(0, 12).forEach((modelo) => {
            const span = document.createElement("span");
            span.className = "modal-tag";
            span.textContent = modelo;
            modalCompatibilidad.appendChild(span);
          });
        }
      }

      modal.setAttribute("aria-hidden", "false");
      modal.classList.add("is-active");
      document.body.style.overflow = "hidden";
    };

    const cerrarModal = () => {
      if (!modal) return;
      modal.classList.remove("is-active");
      modal.setAttribute("aria-hidden", "true");
      const carritoAbierto = cartManager?.isOpen?.() ?? false;
      document.body.style.overflow = carritoAbierto ? "hidden" : "";
      productoActual = null;
    };

    modalCerrar?.addEventListener("click", cerrarModal);
    modalOverlay?.addEventListener("click", cerrarModal);

    modalCotizar?.addEventListener("click", () => {
      if (!productoActual) return;

      const mensaje = `Hola, quisiera hacer una cotización del siguiente producto:\n\nProducto: ${productoActual.nombre}\nID: ${productoActual.id}\n\nGracias.`;
      const url = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${encodeURIComponent(mensaje)}`;
      window.open(url, "_blank");
    });

    document.addEventListener("keydown", (event) => {
      if (event.key === "Escape" && modal?.classList.contains("is-active")) {
        cerrarModal();
      }
    });

    // Exponer función para abrir el modal desde otros componentes
    window.abrirModalProducto = abrirModal;
  });
</script>
